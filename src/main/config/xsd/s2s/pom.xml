<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kuali.kra</groupId>
    <artifactId>ggforms4</artifactId>
    <packaging>jar</packaging>
    <name>KCRA Project. Grants.gov form set 4 schema compiler</name>
    <version>1.0-SNAPSHOT</version>
    <url>http://kuali.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xmlbeans-maven-plugin</artifactId>
                <version>2.2.0</version>
                <executions>
                    <execution>
                        <id>Build-XMLBeans</id>
                        <goals>
                            <goal>xmlbeans</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemaDirectory>ggforms4</schemaDirectory>
                    <download>false</download>
                    <sourceGenerationDirectory>target/generated/xmlbeans</sourceGenerationDirectory>
                    <verbose>true</verbose>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
	<dependency>                    
		<groupId>org.kuali.kra.s2s</groupId>                    
		<artifactId>MetaGrantApplication</artifactId>
		<version>0.9.2-SNAPSHOT</version>                
	</dependency>
        <dependency>
            <groupId>xmlbeans</groupId>
            <artifactId>xmlbeans</artifactId>
            <version>2.2.0</version>
        </dependency>
    </dependencies>
</project>
