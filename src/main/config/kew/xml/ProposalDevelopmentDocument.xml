                    <fieldEvaluation>
                        <!-- expectation: this is run and evaluates to true -->
                        <xpathexpression>string(//xmlRouting/field[@name='tenured']/value) = wf:ruledata('tenured')</xpathexpression>
                    </fieldEvaluation>
