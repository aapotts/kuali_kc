<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.CostElement">

        <inquiry>
            <title>Cost Element</title>

            <inquirySections><inquirySection title="Cost Element"><inquiryFields>
            	<field attributeName="costElement" forceInquiry="true"/>
				<field attributeName="budgetCategoryCode"/>
				<field attributeName="description"/>
				<field attributeName="onOffCampusFlag"/>
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
        	<lookupableID>budgetExpenseLookupable</lookupableID>
            <title>Cost Element Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Cost Element</instructions>
            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="costElement"/>
                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="costElement" required="false"/>
				<lookupField attributeName="description" required="false"/>
				<lookupField attributeName="onOffCampusFlag" required="false"/>
				<lookupField attributeName="budgetCategoryCode" required="false"/>
            </lookupFields>

            <resultFields>
            	<field attributeName="costElement" forceInquiry="true"/>
				<field attributeName="budgetCategoryCode" forceInquiry="false"/>
				<field attributeName="description" forceInquiry="false"/>
				<field attributeName="onOffCampusFlag" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>costElement</titleAttribute>
        <attributes>

	        <attribute name="costElement">
			<label>Object Code Name </label>
			<shortLabel>Object Code Name </shortLabel>
			<maxLength>8</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="8" />
			</control>
			<summary>Object Code Name </summary>
			<description>Object Code Name </description>
			</attribute>

			<attribute name="budgetCategoryCode">
			<label>Budget Category Code </label>
			<shortLabel>Budget Category Code </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="4"/>
			</control>
			<summary>Budget Category Code </summary>
			<description>Budget Category Code </description>
			</attribute>

			<attributeReference name="description" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="description" />

			<attribute name="onOffCampusFlag">
			<label>On/Off Campus Flag</label>
			<shortLabel>On/off Campus </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<checkbox/>
				<!-- 	<radio valuesFinderClass="org.kuali.kra.budget.lookup.keyvalue.OnOffCampusFlagValuesFinder" /> -->
			</control>
			<summary>On Campus </summary>
			<description>On Campus </description>
			</attribute>
			
			<attribute name="budgetCategoryTypeCode">
			<label>Budget Category Type  </label>
			<shortLabel>Budget Category Type </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<!--   <select valuesFinderClass="org.kuali.kra.budget.lookup.keyvalue.BudgetCategoryTypeValuesFinder"/>-->
				<hidden/>
			</control>
			<summary>Budget Category Type </summary>
			<description>Budget Category Type </description>
			</attribute>
			
			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>
    </businessObject>

</dictionaryEntry>
