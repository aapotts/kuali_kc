<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KimRole" parent="KimRole-parentBean" />

  <bean id="KimRole-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kra.kim.bo.KimRole" />
		<property name="objectLabel" value="Kim Role" />
    <property name="inquiryDefinition" >
      <ref bean="KimRole-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="KimRole-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="id" />
    <property name="attributes" >
      <list>
        <ref bean="KimRole-id" />
        <ref bean="KimRole-name" />
        <ref bean="KimRole-roleTypeCode" />
        <ref bean="KimRole-description" />
        <ref bean="KimRole-versionNumber" />
        <ref bean="KimRole-roleTypeName" />
        <ref bean="KimRole-descend" />
      </list>
    </property>
    <property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:name="rolePermissions"
              p:label="Role Permissions"
              p:shortLabel="Role Perm."
              p:summary="Role Permissions"
              p:description="Permissions assigned to a given Role"
              p:elementLabel="Role Permission" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="KimRole-id" parent="KimRole-id-parentBean" />

  <bean id="KimRole-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="id" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Role Id" />
    <property name="shortLabel" value="Role Id" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="Role Id" />
    <property name="description" value="Role Id" />
  </bean>
  <bean id="KimRole-name" parent="KimRole-name-parentBean" />

  <bean id="KimRole-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="name" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Role Name" />
    <property name="shortLabel" value="Role Name" />
    <property name="maxLength" value="500" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="40" />
    </property>
    <property name="summary" value="Role Name" />
    <property name="description" value="Role Name" />
  </bean>
  <bean id="KimRole-roleTypeCode" parent="KimRole-roleTypeCode-parentBean" />

  <bean id="KimRole-roleTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="roleTypeCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Role Type" />
    <property name="shortLabel" value="Role Type" />
    <property name="maxLength" value="1" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.kra.kim.lookup.keyvalue.KimRoleTypeValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
    <property name="summary" value="Role Type" />
    <property name="description" value="Role Type" />
  </bean>
  <bean id="KimRole-description" parent="KimRole-description-parentBean" />

  <bean id="KimRole-description-parentBean" abstract="true" parent="KraAttributeReferenceDummy-bigDescription">
    <property name="name" value="description" />
    <property name="maxLength" value="4000" />
  </bean>
  <bean id="KimRole-versionNumber" parent="KimRole-versionNumber-parentBean" />

  <bean id="KimRole-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>
  <bean id="KimRole-roleTypeName" parent="KimRole-roleTypeName-parentBean" />

  <bean id="KimRole-roleTypeName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="roleTypeName" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Role Type" />
    <property name="shortLabel" value="Role Type" />
    <property name="maxLength" value="500" />
    <property name="required" value="false" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="40" />
    </property>
    <property name="summary" value="Role Type" />
    <property name="description" value="Role Type" />
  </bean>
  <bean id="KimRole-descend" parent="KimRole-descend-parentBean" />

  <bean id="KimRole-descend-parentBean" abstract="true" parent="AttributeReferenceDummy-genericBoolean">
    <property name="name" value="descend" />
    <property name="label" value="Descend" />
    <property name="shortLabel" value="Descend" />
    <property name="summary" value="Descend" />
    <property name="description" value="Descend" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="KimRole-inquiryDefinition" parent="KimRole-inquiryDefinition-parentBean" />

  <bean id="KimRole-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Role" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="KimRole" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="id"
                    p:forceInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="name" />
              <bean parent="FieldDefinition"
                    p:attributeName="roleTypeName" />
              <bean parent="FieldDefinition"
                    p:attributeName="description" />
              <bean parent="FieldDefinition"
                    p:attributeName="descend" />
            </list>
          </property>
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Permissions" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="rolePermissions" />
                <property name="businessObjectClass" value="org.kuali.kra.kim.bo.KimRolePermission" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="permissionId" />
                    <bean parent="FieldDefinition"
                          p:attributeName="permission.name" />
                    <bean parent="FieldDefinition"
                          p:attributeName="active" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="KimRole-lookupDefinition" parent="KimRole-lookupDefinition-parentBean" />

  <bean id="KimRole-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Role Lookup" />
    <property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />

    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="roleTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
        <bean parent="FieldDefinition"
              p:attributeName="descend" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="name"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="roleTypeName"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="description"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="descend" />
      </list>
    </property>
  </bean>
</beans>
