<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="UnitContact" parent="SponsorContact-parentBean" />
  <bean id="UnitContact-parentBean" parent="AwardContact">
    <property name="businessObjectClass" value="org.kuali.kra.award.contacts.AwardUnitContact" />
    <property name="titleAttribute" value="unitContact" />
    <property name="attributes" >
      <list>
        <ref bean="AwardContact-awardContactId" />
        <ref bean="AwardContact-awardNumber" />
        <ref bean="AwardContact-sequenceNumber" />
        <ref bean="AwardContact-fullName" />
        <ref bean="UnitContact-unitContactType" />    
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->
  
  <bean id="UnitContact-unitContactType" parent="UnitContact-unitContactType-parentBean" />
  <bean id="UnitContact-unitContactType-parentBean" abstract="true" parent="AttributeDefinition">
  	<property name="name" value="unitContactTypeName" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Unit Contact Type" />
    <property name="shortLabel" value="Unit Contact Type" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="8" />
    </property>
    <property name="summary" value="Unit Contact Type" />
    <property name="description" value="Unit Contact Type" />
  </bean>
</beans>
