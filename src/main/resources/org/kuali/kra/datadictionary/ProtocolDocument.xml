<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

		<bean id="ProtocolDocument" parent="ProtocolDocument-parentBean" />
		<bean id="ProtocolDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    	<property name="label" value="Protocol Document" />
    	<property name="shortLabel" value="Protocol Doc" />
    	<property name="summary" value="&amp;nbsp;" />
    	<property name="description" value="Doing it right" />
    	<property name="usePessimisticLocking" value="true" />
    	<property name="useWorkflowPessimisticLocking" value="false" />
    	<property name="helpDefinition" >
      	<bean parent="HelpDefinition"
            p:parameterNamespace="KRA-B"
            p:parameterName="protocolDocumentHelp"
            p:parameterDetailType="D" />
    	</property>
    	<property name="documentTypeName" value="ProtocolDocument" />
    	<property name="documentClass" value="org.kuali.kra.irb.document.ProtocolDocument" />
    	<property name="businessRulesClass" value="org.kuali.kra.irb.rules.ProtocolDocumentRule" />
    	<property name="documentAuthorizerClass" value="org.kuali.kra.irb.document.authorization.ProtocolDocumentAuthorizer" />
    	<property name="documentTypeCode" value="PROT" />
    	<property name="allowsCopy" value="true" />
    	<property name="headerNavigationList" >
      	<list>
        	<bean parent="HeaderNavigation">
          	<property name="helpDefinition" >
            	<bean parent="HelpDefinition"
                  p:parameterNamespace="KRA-PD"
                  p:parameterName="protocolHelp"
                  p:parameterDetailType="D" />
          	</property>
          	<property name="headerTabDisplayName" value="Protocol" />
          	<property name="headerTabNavigateTo" value="protocol" />
        	</bean>
      	</list>
    	</property>
    	<property name="authorizations" >
      	<list>
        	<bean parent="AuthorizationDefinition">
          	<property name="action" value="initiate" />
          	<property name="authorizedGroups" >
            	<set>
              		<value>KualiUniversalGroup</value>
            	</set>
          	</property>
        	</bean>
      	</list>
    	</property>

		<property name="attributes" >
			<list>
				<ref bean="ProtocolDocument-versionNumber" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	
	<bean id="ProtocolDocument-versionNumber" parent="ProtocolDocument-versionNumber-parentBean" />
	<bean id="ProtocolDocument-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
	</bean>
</beans>
