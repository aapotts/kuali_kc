<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.BudgetPeriod">

        <inquiry>
            <title>Budget Periods</title>

            <inquirySections><inquirySection title="Budget Periods"><inquiryFields>
            	<field attributeName="budgetPeriod" forceInquiry="true"/>
				<field attributeName="proposalNumber" forceInquiry="true"/>
				<field attributeName="versionNumber" forceInquiry="true"/>
				<field attributeName="comments"/>
				<field attributeName="costSharingAmount"/>
				<field attributeName="endDate"/>
				<field attributeName="startDate"/>
				<field attributeName="totalCost"/>
				<field attributeName="totalCostLimit"/>
				<field attributeName="totalDirectCost"/>
				<field attributeName="totalIndirectCost"/>
				<field attributeName="underrecoveryAmount"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Budget Periods Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Budget Periods</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="budgetPeriod"/>
					<sortAttribute attributeName="proposalNumber"/>
					<sortAttribute attributeName="versionNumber"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="budgetPeriod" required="false"/>
				<lookupField attributeName="proposalNumber" required="false"/>
				<lookupField attributeName="versionNumber" required="false"/>
				<lookupField attributeName="comments" required="false"/>
				<lookupField attributeName="costSharingAmount" required="false"/>
				<lookupField attributeName="endDate" required="false"/>
				<lookupField attributeName="startDate" required="false"/>
				<lookupField attributeName="totalCost" required="false"/>
				<lookupField attributeName="totalCostLimit" required="false"/>
				<lookupField attributeName="totalDirectCost" required="false"/>
				<lookupField attributeName="totalIndirectCost" required="false"/>
				<lookupField attributeName="underrecoveryAmount" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="budgetPeriod" forceInquiry="true"/>
				<field attributeName="proposalNumber" forceInquiry="true"/>
				<field attributeName="versionNumber" forceInquiry="true"/>
				<field attributeName="comments" forceInquiry="false"/>
				<field attributeName="costSharingAmount" forceInquiry="false"/>
				<field attributeName="endDate" forceInquiry="false"/>
				<field attributeName="startDate" forceInquiry="false"/>
				<field attributeName="totalCost" forceInquiry="false"/>
				<field attributeName="totalCostLimit" forceInquiry="false"/>
				<field attributeName="totalDirectCost" forceInquiry="false"/>
				<field attributeName="totalIndirectCost" forceInquiry="false"/>
				<field attributeName="underrecoveryAmount" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>budgetPeriod</titleAttribute>
		<!-- <titleAttribute>proposalNumber</titleAttribute>
		<titleAttribute>versionNumber</titleAttribute> -->
        <attributes>

	        <attribute name="budgetPeriod">
			<label>Budget Period </label>
			<shortLabel>Budget Period </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>				
				<select valuesFinderClass="org.kuali.kra.budget.lookup.keyvalue.BudgetExpensePeriodValuesFinder"/>
			</control>
			<summary>Budget Period </summary>
			<description>Budget Period </description>
			</attribute>

			<attribute name="proposalNumber">
			<label>Proposal Number </label>
			<shortLabel>Proposal Number </shortLabel>
			<maxLength>12</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="12" />
			</control>
			<summary>Proposal Number </summary>
			<description>Proposal Number </description>
			</attribute>

			<attribute name="versionNumber">
			<label>Version Number </label>
			<shortLabel>Version Number </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="3" />
			</control>
			<summary>Version Number </summary>
			<description>Version Number </description>
			</attribute>

			<attribute name="comments">
			<label>Comments </label>
			<shortLabel>Comments </shortLabel>
			<maxLength>2000</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="0" />
			</control>
			<summary>Comments </summary>
			<description>Comments </description>
			</attribute>

            <attributeReference name="costSharingAmount" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Cost Sharing</label>
			<shortLabel>Cost Sharing</shortLabel>
			<summary>Cost Sharing</summary>
			<description>Cost Sharing</description>
			</attributeReference>

            <attributeReference name="endDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>Period End Date</label>
                <shortLabel>Period End Date</shortLabel>
                <summary>Period End Date</summary>
                <description>Period End Date.</description>
      		</attributeReference>

            <attributeReference name="startDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>Period Start Date</label>
                <shortLabel>Period Start Date</shortLabel>
                <summary>Period Start Date</summary>
                <description>Period Start Date.</description>
      		</attributeReference>

            <attributeReference name="totalCost" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Total Requested Cost</label>
			<shortLabel>Total Requested Cost </shortLabel>
			<summary>Total Requested Cost </summary>
			<description>Total Requested Cost </description>
			</attributeReference>

            <attributeReference name="totalCostLimit" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Cost Limit </label>
			<shortLabel>Cost Limit </shortLabel>
			<summary>Cost Limit </summary>
			<description>Cost Limit </description>
			</attributeReference>

            <attributeReference name="totalDirectCost" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Direct Cost</label>
			<shortLabel>Direct Cost</shortLabel>
			<summary>Direct Cost</summary>
			<description>Direct Cost</description>
			</attributeReference>

            <attributeReference name="totalIndirectCost" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>F&amp;A Cost </label>
			<shortLabel>F&amp;A Cost </shortLabel>
			<summary>F&amp;A Cost </summary>
			<description>F&amp;A Cost </description>
			</attributeReference>

            <attributeReference name="underrecoveryAmount" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Unrecovered F&amp;A</label>
			<shortLabel>Unrecovered F&amp;A</shortLabel>
			<summary>Unrecovered F&amp;A</summary>
			<description>Unrecovered F&amp;A</description>
			</attributeReference>

		</attributes>

        <objectHelp parameterNamespace="KRA-B" parameterDetailType="D"  parameterName="budgetPeriodHelpUrl"/> 
    </businessObject>

</dictionaryEntry>
