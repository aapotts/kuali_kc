<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.proposaldevelopment.bo.ProposalLocation">

        <inquiry>
            <title>Prop Location</title>

            <inquirySections><inquirySection title="Prop Location"><inquiryFields>
            	<field attributeName="location" forceInquiry="true"/>
				<field attributeName="proposalNumber" forceInquiry="true"/>
				<field attributeName="rolodexId"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Prop Location Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Prop Location</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="location"/>
					<sortAttribute attributeName="proposalNumber"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="location" required="false"/>
				<lookupField attributeName="proposalNumber" required="false"/>
				<lookupField attributeName="rolodexId" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="location" forceInquiry="true"/>
				<field attributeName="proposalNumber" forceInquiry="true"/>
				<field attributeName="rolodexId" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>location</titleAttribute>
        <attributes>

	        <attribute name="location">
			<label>Location Name </label>
			<shortLabel>Location </shortLabel>
			<maxLength>60</maxLength>
			<validationPattern><alphaNumeric allowWhitespace="true" allowUnderscore="true"/></validationPattern>
			<required>true</required>

			<control>
				<text size="60" />
			</control>
			<summary>Location Name</summary>
			<description>This field is synonymous with "project site" or "performing site."  It is used to identify all performance locations, as well as subcontractor locations.</description>
			</attribute>

			<attribute name="proposalNumber">
			<label>Proposal Number </label>
			<shortLabel>Proposal Number </shortLabel>
			<maxLength>12</maxLength>
			<validationPattern><numeric /></validationPattern>
			<!-- <required>true</required> -->
			<control>
				<hidden />
			</control>
			<summary>Proposal Number </summary>
			<description>Proposal Number </description>
			</attribute>

			<attribute name="rolodexId">
			<label>Rolodex Id </label>
			<shortLabel>Rolodex Id </shortLabel>
			<maxLength>6</maxLength>
			<validationPattern><numeric /></validationPattern>
			<required>true</required>
			<control>
				<hidden />
			</control>
			<summary>Rolodex Id </summary>
			<description>Rolodex Id </description>
			</attribute>
			<attribute name="locationSequenceNumber">
			<label>Location Sequence Number </label>
			<shortLabel>Location Sequence </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<hidden />
			</control>
			<summary>Location Sequence Number</summary>
			<description>Location Sequence Number</description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
