<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProposalLocation" parent="ProposalLocation-parentBean" />

  <bean id="ProposalLocation-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kra.proposaldevelopment.bo.ProposalLocation" />
    <property name="inquiryDefinition" >
      <ref bean="ProposalLocation-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="ProposalLocation-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="location" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-PD"
            p:parameterName="proposalDevelopmentLocationHelpUrl"
            p:parameterDetailType="D" />
    </property>
    <property name="attributes" >
      <list>
        <ref bean="ProposalLocation-location" />
        <ref bean="ProposalLocation-proposalNumber" />
        <ref bean="ProposalLocation-rolodexId" />
        <ref bean="ProposalLocation-locationSequenceNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="ProposalLocation-location" parent="ProposalLocation-location-parentBean" />

  <bean id="ProposalLocation-location-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="location" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Location Name" />
    <property name="shortLabel" value="Location" />
    <property name="maxLength" value="60" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="60" />
    </property>
    <property name="summary" value="Location Name" />
    <property name="description" value="This field is synonymous with &quot;project site&quot; or &quot;performing site.&quot;  It is used to identify all performance locations, as well as subcontractor locations." />
  </bean>
  <bean id="ProposalLocation-proposalNumber" parent="ProposalLocation-proposalNumber-parentBean" />

  <bean id="ProposalLocation-proposalNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="proposalNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Proposal Number" />
    <property name="shortLabel" value="Proposal Number" />
    <property name="maxLength" value="12" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="Proposal Number" />
    <property name="description" value="Proposal Number" />
  </bean>
  <bean id="ProposalLocation-rolodexId" parent="ProposalLocation-rolodexId-parentBean" />

  <bean id="ProposalLocation-rolodexId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="rolodexId" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Rolodex Id" />
    <property name="shortLabel" value="Rolodex Id" />
    <property name="maxLength" value="6" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="Rolodex Id" />
    <property name="description" value="Rolodex Id" />
  </bean>
  <bean id="ProposalLocation-locationSequenceNumber" parent="ProposalLocation-locationSequenceNumber-parentBean" />

  <bean id="ProposalLocation-locationSequenceNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="locationSequenceNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Location Sequence Number" />
    <property name="shortLabel" value="Location Sequence" />
    <property name="maxLength" value="3" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="Location Sequence Number" />
    <property name="description" value="Location Sequence Number" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="ProposalLocation-inquiryDefinition" parent="ProposalLocation-inquiryDefinition-parentBean" />

  <bean id="ProposalLocation-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Prop Location" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Prop Location" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="location"
                    p:forceInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="proposalNumber"
                    p:forceInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="rolodexId" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="ProposalLocation-lookupDefinition" parent="ProposalLocation-lookupDefinition-parentBean" />

  <bean id="ProposalLocation-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Prop Location Lookup" />
    <property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />
    <property name="instructions" value="Look up a Prop Location" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="location" />
        <bean parent="FieldDefinition"
              p:attributeName="proposalNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="rolodexId" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="location"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="proposalNumber"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="rolodexId" />
      </list>
    </property>
  </bean>
</beans>
