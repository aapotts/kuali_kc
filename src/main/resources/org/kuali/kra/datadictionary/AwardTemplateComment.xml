<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="AwardTemplateComment" parent="AwardTemplateComment-parentBean" />
	<bean id="AwardTemplateComment-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.kra.award.bo.AwardTemplateComment" />
		<property name="inquiryDefinition" >
			<ref bean="AwardTemplateComment-inquiryDefinition" />
		</property>
		<property name="lookupDefinition" >
			<ref bean="AwardTemplateComment-lookupDefinition" />
		</property>
		<property name="titleAttribute" value="templateCommentsId" />
		<property name="attributes" >
			<list>
				<ref bean="AwardTemplateComment-templateCommentsId" />
				<!--<ref bean="AwardTemplateComment-templateCode" />-->
				<ref bean="AwardTemplateComment-commentTypeCode" />
				<ref bean="AwardTemplateComment-checklistPrintFlag" />
				<ref bean="AwardTemplateComment-comments" />
				<ref bean="AwardTemplateComment-versionNumber" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	
	<bean id="AwardTemplateComment-templateCommentsId" parent="AwardTemplateComment-templateCommentsId-parentBean" />
	<bean id="AwardTemplateComment-templateCommentsId-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="templateCommentsId" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Template Comments Id" />
		<property name="shortLabel" value="Template Comments Id" />
		<property name="maxLength" value="22" />
		<property name="validationPattern" >
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control" >
			<bean parent="TextControlDefinition"
				p:size="10" />
		</property>
		<property name="summary" value="Template Comments Id" />
		<property name="description" value="Template Comments Id" />
	</bean>

	<!--<bean id="AwardTemplateComment-templateCode" parent="AwardTemplateComment-templateCode-parentBean" />-->
	<!--<bean id="AwardTemplateComment-templateCode-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="templateCode" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Template Code" />
		<property name="shortLabel" value="Template Code" />
		<property name="maxLength" value="22" />
		<property name="validationPattern" >
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control" >
			<bean parent="TextControlDefinition"
				p:size="10" />
		</property>
		<property name="summary" value="Template Code" />
		<property name="description" value="Template Code" />
	</bean>-->

	<bean id="AwardTemplateComment-commentTypeCode" parent="AwardTemplateComment-commentTypeCode-parentBean" />
	<bean id="AwardTemplateComment-commentTypeCode-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="commentTypeCode" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Comment Type" />
		<property name="shortLabel" value="Comment Type" />
		<property name="maxLength" value="22" />
		<property name="validationPattern" >
			<bean parent="AlphaNumericValidationPattern" />
		</property>
	    <property name="control" >
	      <bean parent="SelectControlDefinition"
	            p:businessObjectClass="org.kuali.kra.bo.CommentType"
	            p:valuesFinderClass="org.kuali.kra.award.lookup.keyvalue.AwardTemplateCommentTypeValueFinder"
	            p:includeKeyInLabel="false"
	            p:keyAttribute="commentTypeCode"
	            p:labelAttribute="description" />
	    </property>
		<property name="summary" value="Comment Type" />
		<property name="description" value="Comment Type" />
	</bean>

	<bean id="AwardTemplateComment-checklistPrintFlag" parent="AwardTemplateComment-checklistPrintFlag-parentBean" />
	<bean id="AwardTemplateComment-checklistPrintFlag-parentBean" abstract="true" parent="AttributeReferenceDummy-genericBoolean" >
		<property name="name" value="checklistPrintFlag" />
		<property name="label" value="Checklist Print Flag" />
		<property name="shortLabel" value="Checklist Print Flag" />
		<property name="summary" value="Checklist Print Flag" />
		<property name="description" value="Checklist Print Flag" />
	</bean>

	<bean id="AwardTemplateComment-comments" parent="AwardTemplateComment-comments-parentBean" />
	<bean id="AwardTemplateComment-comments-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="comments" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Comments" />
		<property name="shortLabel" value="Comments" />
		<property name="maxLength" value="2000" />
		<property name="validationPattern" >
			<bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
		</property>
	    <property name="control" >
	      <bean parent="TextareaControlDefinition"
	            p:rows="5"
	            p:cols="40" />
	    </property>
		<property name="summary" value="Comments" />
		<property name="description" value="Comments" />
	</bean>

	<bean id="AwardTemplateComment-versionNumber" parent="AwardTemplateComment-versionNumber-parentBean" />
	<bean id="AwardTemplateComment-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
	</bean>

	<!-- Business Object Inquiry Definition -->
	<bean id="AwardTemplateComment-inquiryDefinition" parent="AwardTemplateComment-inquiryDefinition-parentBean" />
	<bean id="AwardTemplateComment-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
		<property name="title" value="Template Comments Id" />
		<property name="inquirySections" >
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="title" value="Template Comments Id" />
					<property name="numberOfColumns" value="1" />
					<property name="inquiryFields" >
						<list>
							<bean parent="FieldDefinition"
								p:attributeName="templateCommentsId" 
								p:forceInquiry="true" />
							<!--<bean parent="FieldDefinition"
								p:attributeName="templateCode" />-->
							<bean parent="FieldDefinition"
								p:attributeName="commentTypeCode" />
							<bean parent="FieldDefinition"
								p:attributeName="checklistPrintFlag" />
							<bean parent="FieldDefinition"
								p:attributeName="comments" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Business Object Lookup Definition -->
	<bean id="AwardTemplateComment-lookupDefinition" parent="AwardTemplateComment-lookupDefinition-parentBean" />
	<bean id="AwardTemplateComment-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
		<property name="title" value="Template Comments Lookup" />
		<property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />
		<property name="instructions" value="Look up a Template Comments" />
		<property name="defaultSort" >
			<bean parent="SortDefinition" >
		</bean>
		</property>
		<property name="lookupFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="templateCommentsId" 
					p:forceInquiry="true" />
				<!--<bean parent="FieldDefinition"
					p:attributeName="templateCode" />-->
				<bean parent="FieldDefinition"
					p:attributeName="commentTypeCode" />
				<bean parent="FieldDefinition"
					p:attributeName="checklistPrintFlag" />
				<bean parent="FieldDefinition"
					p:attributeName="comments" />
			</list>
		</property>
		<property name="resultFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="templateCommentsId" 
					p:forceInquiry="true" />
				<!--<bean parent="FieldDefinition"
					p:attributeName="templateCode" />-->
				<bean parent="FieldDefinition"
					p:attributeName="commentTypeCode" />
				<bean parent="FieldDefinition"
					p:attributeName="checklistPrintFlag" />
				<bean parent="FieldDefinition"
					p:attributeName="comments" />
			</list>
		</property>
	</bean>
</beans>
