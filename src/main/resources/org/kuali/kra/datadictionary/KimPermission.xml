<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.kim.bo.KimPermission">

        <inquiry>
            <title>KIM Permission</title>

            <inquirySections><inquirySection title="KimPermission"><inquiryFields>
                <field attributeName="name"/>
                <field attributeName="description"/>
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>KIM Permission Lookup</title>
            <menubar>
                <![CDATA[<a href="index.jsp">Main</a>]]>
            </menubar>
            <instructions>Look up a KIM Permission</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="name"/>
                    <sortAttribute attributeName="description"/>
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="name" required="false"/>
                <lookupField attributeName="description" required="false"/>
            </lookupFields>

            <resultFields>
                <field attributeName="name" forceInquiry="false"/>
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>id</titleAttribute>
        <attributes>
            <attribute name="id">
                <label>Permission Id </label>
                <shortLabel>Permission Id </shortLabel>
                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>
                <control>
                    <hidden />
                </control>
                <summary>Permission Id </summary>
                <description>Permission Id </description>
            </attribute>

            <attribute name="name" >
                <label>Permission Name</label>
                <shortLabel>Permission Name</shortLabel>
                <maxLength>500</maxLength>
                <control>
                    <text size="40" />
                </control>
                <summary>Permission Name</summary>
                <description>Permission Name</description>
            </attribute>

            <attributeReference name="description" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="bigDescription">
                <maxLength>4000</maxLength>
            </attributeReference>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        </attributes>
    </businessObject>

</dictionaryEntry>
