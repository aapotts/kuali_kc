<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.proposaldevelopment.bo.ProposalAbstract">

        <inquiry>
            <title>Proposal Abstract</title>

            <inquirySections><inquirySection title="Proposal Abstract"><inquiryFields>
            	<field attributeName="proposalNumber" forceInquiry="true"/>
            	<field attributeName="abstractTypeCode" forceInquiry="true"/>
            	<field attributeName="abstractDetails"/>
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Proposal Abstract Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Proposal Abstract</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
					<sortAttribute attributeName="proposalNumber"/>
					<sortAttribute attributeName="abstractTypeCode"/>
                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="proposalNumber" required="false"/>
            	<lookupField attributeName="abstractTypeCode" required="false"/>
            </lookupFields>

            <resultFields>
            	<field attributeName="proposalNumber" forceInquiry="true"/>
            	<field attributeName="abstractTypeCode" forceInquiry="true"/>
				<field attributeName="abstractDetails" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>abstractTypeCode</titleAttribute>
        <attributes>

			<attribute name="proposalNumber">
				<label>Proposal Number </label>
				<shortLabel>Proposal Number </shortLabel>
				<maxLength>12</maxLength>
				<validationPattern><numeric /></validationPattern>
				<control>
					<hidden />
				</control>
				<summary>Proposal Number </summary>
				<description>Proposal Number </description>
			</attribute>
			
	        <attribute name="abstractTypeCode">
				<label>Abstract Type</label>
				<shortLabel>Abstract Type</shortLabel>
				<maxLength>3</maxLength>
				<validationPattern><numeric /></validationPattern>
				<required>true</required>
				<control>
					<select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.AbstractTypeValuesFinder" />
				</control>
				<summary>Abstract Type</summary>
				<description>Abstract Type</description>
			</attribute>

			<attribute name="abstractDetails">
				<label>Abstract Details</label>
				<shortLabel>Abstract Details</shortLabel>
				<!-- not sure what's the length for CLOB.  following example in bugdgetmodular in kfs -->
				<maxLength>50000</maxLength>
				<control>
					<textarea cols="30" rows="3"/>
				</control>
				<summary>Abstract Details</summary>
				<description>Abstract Details</description>
			</attribute>
			
			<attributeReference name="updateUser" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="updateUser" >
				<description>The user who created or last modified the Abstract.</description>
			</attributeReference>
			
			<attributeReference name="updateTimestamp" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="updateTimestamp" >
				<description>The timestamp when the Abstract was created or last modified.</description>
			</attributeReference>
			
		</attributes>

        <objectHelp parameterNamespace="KRA-PD" parameterDetailType="D" parameterName="proposalDevelopmentAbstractHelpUrl"/> 
    </businessObject>

</dictionaryEntry>
