<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="StateMaintenanceDocument" parent="StateMaintenanceDocument-parentBean" />

  <bean id="StateMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.State" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="StateMaintenanceDocument-EditState" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>countryCode</value>
        <value>stateCode</value>
      </list>
    </property>
    <property name="label" value="State Maintenance Document" />
    <property name="shortLabel" value="stateMaintDoc" />
    <property name="summary" value="State Maintenance Document" />
    <property name="description" value="Document used to create or update State Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="stateMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="StateMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="STTC" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="StateMaintenanceDocument-EditState" parent="StateMaintenanceDocument-EditState-parentBean" />

  <bean id="StateMaintenanceDocument-EditState-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit State" />
    <property name="title" value="Edit State" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="countryCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="stateCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
