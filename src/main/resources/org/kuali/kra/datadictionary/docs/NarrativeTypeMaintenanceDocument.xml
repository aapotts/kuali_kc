<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="NarrativeTypeMaintenanceDocument" parent="NarrativeTypeMaintenanceDocument-parentBean" />

  <bean id="NarrativeTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.proposaldevelopment.bo.NarrativeType" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="NarrativeTypeMaintenanceDocument-EditNarrativeTypes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>narrativeTypeCode</value>
      </list>
    </property>
    <property name="label" value="Narrative Type Maintenance Document" />
    <property name="shortLabel" value="narrativeTypeMaintDoc" />
    <property name="summary" value="Narrative Type Maintenance Document" />
    <property name="description" value="Document used to create or update Narrative Type Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="narrativeTypeMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="NarrativeTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="NRTP" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="NarrativeTypeMaintenanceDocument-EditNarrativeTypes" parent="NarrativeTypeMaintenanceDocument-EditNarrativeTypes-parentBean" />

  <bean id="NarrativeTypeMaintenanceDocument-EditNarrativeTypes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Narrative Types" />
    <property name="title" value="Edit Narrative Types" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="narrativeTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="systemGenerated"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="allowMultiple"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="narrativeTypeGroup"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
