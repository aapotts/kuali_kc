<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="YnqExplanationMaintenanceDocument" parent="YnqExplanationMaintenanceDocument-parentBean" />

  <bean id="YnqExplanationMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.YnqExplanation" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="YnqExplanationMaintenanceDocument-EditYnqExplanation" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>explanationType</value>
        <value>questionId</value>
      </list>
    </property>
    <property name="label" value="YnqExplanation Maintenance Document" />
    <property name="shortLabel" value="ynqExplanationMaintDoc" />
    <property name="summary" value="YnqExplanation Maintenance Document" />
    <property name="description" value="Document used to create or update YnqExplanation Reference objects" />
    <property name="documentTypeName" value="YnqExplanationMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="YNEX" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="YnqExplanationMaintenanceDocument-EditYnqExplanation" parent="YnqExplanationMaintenanceDocument-EditYnqExplanation-parentBean" />

  <bean id="YnqExplanationMaintenanceDocument-EditYnqExplanation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit YnqExplanation" />
    <property name="title" value="Edit YnqExplanation" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="explanationType"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="questionId"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="explanation" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
