<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="SpecialReviewApprovalTypeMaintenanceDocument" parent="SpecialReviewApprovalTypeMaintenanceDocument-parentBean" />

  <bean id="SpecialReviewApprovalTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.SpecialReviewApprovalType" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="SpecialReviewApprovalTypeMaintenanceDocument-EditApprovalTypeCodes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>approvalTypeCode</value>
      </list>
    </property>
    <property name="label" value="Special Review Approval Status Maintenance Document" />
    <property name="shortLabel" value="specialReviewApprovalTypeMaintDoc" />
    <property name="summary" value="Special Review Approval Status Maintenance Document" />
    <property name="description" value="Document used to create or update Special Review  Approval Status Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="specialReviewApprovalStatusMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="SpecialReviewApprovalTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="SRAT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="SpecialReviewApprovalTypeMaintenanceDocument-EditApprovalTypeCodes" parent="SpecialReviewApprovalTypeMaintenanceDocument-EditApprovalTypeCodes-parentBean" />

  <bean id="SpecialReviewApprovalTypeMaintenanceDocument-EditApprovalTypeCodes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit ApprovalType Codes" />
    <property name="title" value="Edit ApprovalType Codes" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="approvalTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
