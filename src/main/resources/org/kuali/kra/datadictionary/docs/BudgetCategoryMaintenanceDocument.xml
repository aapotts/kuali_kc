<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BudgetCategoryMaintenanceDocument" parent="BudgetCategoryMaintenanceDocument-parentBean" />

  <bean id="BudgetCategoryMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.budget.bo.BudgetCategory" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BudgetCategoryMaintenanceDocument-EditBudgetCategory" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>budgetCategoryCode</value>
      </list>
    </property>
    <property name="label" value="Budget Category Maintenance Document" />
    <property name="shortLabel" value="budgetCategoryMaintDoc" />
    <property name="summary" value="BudgetCategory Maintenance Document" />
    <property name="description" value="Document used to create or update BudgetCategory Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="budgetCategoryMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="BudgetCategoryMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kra.rules.BudgetCategoryTypeExistenceRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BUCA" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BudgetCategoryMaintenanceDocument-EditBudgetCategory" parent="BudgetCategoryMaintenanceDocument-EditBudgetCategory-parentBean" />

  <bean id="BudgetCategoryMaintenanceDocument-EditBudgetCategory-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Budget Category" />
    <property name="title" value="Edit Budget Category" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetCategoryCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetCategoryTypeCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
