<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ScienceKeywordMaintenanceDocument" parent="ScienceKeywordMaintenanceDocument-parentBean" />

  <bean id="ScienceKeywordMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.proposaldevelopment.bo.ScienceKeyword" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ScienceKeywordMaintenanceDocument-EditScienceKeywords" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>scienceKeywordCode</value>
      </list>
    </property>
    <property name="label" value="Keyword Maintenance Document" />
    <property name="shortLabel" value="ScienceKeywordMaintDoc" />
    <property name="summary" value="Keyword Maintenance Document" />
    <property name="description" value="Document used to create or update Science Keyword Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="scienceKeywordMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="ScienceKeywordMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="SCKC" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ScienceKeywordMaintenanceDocument-EditScienceKeywords" parent="ScienceKeywordMaintenanceDocument-EditScienceKeywords-parentBean" />

  <bean id="ScienceKeywordMaintenanceDocument-EditScienceKeywords-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Science Keywords" />
    <property name="title" value="Edit Science Keywords" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="scienceKeywordCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
