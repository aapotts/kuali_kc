<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="NarrativeStatusMaintenanceDocument" parent="NarrativeStatusMaintenanceDocument-parentBean" />

  <bean id="NarrativeStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.proposaldevelopment.bo.NarrativeStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="NarrativeStatusMaintenanceDocument-EditNarrativeStatus" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>narrativeStatusCode</value>
      </list>
    </property>
    <property name="label" value="NarrativeStatus Maintenance Document" />
    <property name="shortLabel" value="narrativeStatusMaintDoc" />
    <property name="summary" value="NarrativeStatus Maintenance Document" />
    <property name="description" value="Document used to create or update NarrativeStatus Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="narrativeStatusMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="NarrativeStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="NAST" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="NarrativeStatusMaintenanceDocument-EditNarrativeStatus" parent="NarrativeStatusMaintenanceDocument-EditNarrativeStatus-parentBean" />

  <bean id="NarrativeStatusMaintenanceDocument-EditNarrativeStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit NarrativeStatus" />
    <property name="title" value="Edit NarrativeStatus" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="narrativeStatusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
