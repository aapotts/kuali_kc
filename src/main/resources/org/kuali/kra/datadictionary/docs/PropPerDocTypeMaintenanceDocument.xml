<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PropPerDocTypeMaintenanceDocument" parent="PropPerDocTypeMaintenanceDocument-parentBean" />

  <bean id="PropPerDocTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.PropPerDocType" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PropPerDocTypeMaintenanceDocument-EditPersonDocumentType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>documentTypeCode</value>
      </list>
    </property>
    <property name="label" value="Person Document Type Maintenance Document" />
    <property name="shortLabel" value="PersonDocTypeMaintDoc" />
    <property name="summary" value="Person Document Type Maintenance Document" />
    <property name="description" value="Document used to create or update Person Document Type Code Reference objects" />
    <property name="documentTypeName" value="PropPerDocTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PPDT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PropPerDocTypeMaintenanceDocument-EditPersonDocumentType" parent="PropPerDocTypeMaintenanceDocument-EditPersonDocumentType-parentBean" />

  <bean id="PropPerDocTypeMaintenanceDocument-EditPersonDocumentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Person Document Type" />
    <property name="title" value="Edit Person Document Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="documentTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
