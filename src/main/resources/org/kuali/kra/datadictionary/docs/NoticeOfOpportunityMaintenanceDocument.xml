<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="NoticeOfOpportunityMaintenanceDocument" parent="NoticeOfOpportunityMaintenanceDocument-parentBean" />

  <bean id="NoticeOfOpportunityMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.NoticeOfOpportunity" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="NoticeOfOpportunityMaintenanceDocument-EditNoticeofOpportunity" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>noticeOfOpportunityCode</value>
      </list>
    </property>
    <property name="label" value="Notice of Opportunity Maintenance Document" />
    <property name="shortLabel" value="NoticeOfOpportunityMaintDoc" />
    <property name="summary" value="Notice of Opportunity Maintenance Document" />
    <property name="description" value="Document used to create or update Notice of Opportunity Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="noticeOfOpportunityMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="NoticeOfOpportunityMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="NOOT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="NoticeOfOpportunityMaintenanceDocument-EditNoticeofOpportunity" parent="NoticeOfOpportunityMaintenanceDocument-EditNoticeofOpportunity-parentBean" />

  <bean id="NoticeOfOpportunityMaintenanceDocument-EditNoticeofOpportunity-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Notice of Opportunity" />
    <property name="title" value="Edit Notice of Opportunity" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="noticeOfOpportunityCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
