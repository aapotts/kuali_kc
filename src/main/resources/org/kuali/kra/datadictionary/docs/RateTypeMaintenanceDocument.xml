<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RateTypeMaintenanceDocument" parent="RateTypeMaintenanceDocument-parentBean" />

  <bean id="RateTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.budget.bo.RateType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RateTypeMaintenanceDocument-EditRateType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>rateClassCode</value>
        <value>rateTypeCode</value>
      </list>
    </property>
    <property name="label" value="Rate Type Maintenance Document" />
    <property name="shortLabel" value="rateTypeMaintDoc" />
    <property name="summary" value="Rate Type Maintenance Document" />
    <property name="description" value="Document used to create or update RateType Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="rateTypeMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="RateTypeMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kra.rules.RateClassExistenceRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RATY" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RateTypeMaintenanceDocument-EditRateType" parent="RateTypeMaintenanceDocument-EditRateType-parentBean" />

  <bean id="RateTypeMaintenanceDocument-EditRateType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Rate Type" />
    <property name="title" value="Edit Rate Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="rateClassCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="rateTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
