<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ActivityTypeMaintenanceDocument" parent="ActivityTypeMaintenanceDocument-parentBean" />

  <bean id="ActivityTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.proposaldevelopment.bo.ActivityType" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ActivityTypeMaintenanceDocument-EditActivityTypes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>activityTypeCode</value>
      </list>
    </property>
    <property name="label" value="Activity Type Maintenance Document" />
    <property name="shortLabel" value="activityTypeMaintDoc" />
    <property name="summary" value="Activity Type Maintenance Document" />
    <property name="description" value="Document used to create or update Activity Type Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="activityTypeMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="ActivityTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ACTT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ActivityTypeMaintenanceDocument-EditActivityTypes" parent="ActivityTypeMaintenanceDocument-EditActivityTypes-parentBean" />

  <bean id="ActivityTypeMaintenanceDocument-EditActivityTypes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Activity Types" />
    <property name="title" value="Edit Activity Types" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="activityTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
