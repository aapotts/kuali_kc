<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="JobCodeMaintenanceDocument" parent="JobCodeMaintenanceDocument-parentBean" />

  <bean id="JobCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.budget.bo.JobCode" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="JobCodeMaintenanceDocument-EditJobCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>jobCode</value>
      </list>
    </property>
    <property name="label" value="JobCode Maintenance Document" />
    <property name="shortLabel" value="jobCodeMaintDoc" />
    <property name="summary" value="JobCode Maintenance Document" />
    <property name="description" value="Document used to create or update JobCode Reference objects" />
    <property name="documentTypeName" value="JobCodeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="JOCO" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="JobCodeMaintenanceDocument-EditJobCode" parent="JobCodeMaintenanceDocument-EditJobCode-parentBean" />

  <bean id="JobCodeMaintenanceDocument-EditJobCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit JobCode" />
    <property name="title" value="Edit JobCode" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="jobCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="jobTitle"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
