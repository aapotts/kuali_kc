<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PersonEditableFieldMaintenanceDocument" parent="PersonEditableFieldMaintenanceDocument-parentBean" />

  <bean id="PersonEditableFieldMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.PersonEditableField" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PersonEditableFieldMaintenanceDocument-SpecifytheFieldName" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>fieldName</value>
      </list>
    </property>
    <property name="label" value="Person Editable Field" />
    <property name="shortLabel" value="personEditableFieldMaintDoc" />
    <property name="summary" value="Person Editable Field Maintenance Document" />
    <property name="description" value="Document used to a configuration that defines which fields of Person are editable." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="personEditableFieldMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="PersonEditableFieldMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kra.proposaldevelopment.rules.PersonEditableFieldRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PREF" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PersonEditableFieldMaintenanceDocument-SpecifytheFieldName" parent="PersonEditableFieldMaintenanceDocument-SpecifytheFieldName-parentBean" />

  <bean id="PersonEditableFieldMaintenanceDocument-SpecifytheFieldName-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Specify the Field Name" />
    <property name="title" value="Specify the Field Name" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="fieldName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
