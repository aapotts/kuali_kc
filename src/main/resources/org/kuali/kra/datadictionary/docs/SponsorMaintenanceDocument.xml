<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="SponsorMaintenanceDocument" parent="SponsorMaintenanceDocument-parentBean" />

  <bean id="SponsorMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.Sponsor" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="SponsorMaintenanceDocument-EditSponsor" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>sponsorCode</value>
      </list>
    </property>
    <property name="label" value="Sponsor Maintenance Document" />
    <property name="shortLabel" value="sponsorMaintDoc" />
    <property name="summary" value="Sponsor Maintenance Document" />
    <property name="description" value="Document used to create or update Sponsor Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="sponsorMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="SponsorMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="SPON" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="SponsorMaintenanceDocument-EditSponsor" parent="SponsorMaintenanceDocument-EditSponsor-parentBean" />

  <bean id="SponsorMaintenanceDocument-EditSponsor-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Sponsor" />
    <property name="title" value="Edit Sponsor" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="sponsorCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="acronym" />
        <bean parent="MaintainableFieldDefinition"
              p:name="auditReportSentForFy" />
        <bean parent="MaintainableFieldDefinition"
              p:name="cageNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="countryCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dodacNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dunAndBradstreetNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dunsPlusFourNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="ownedByUnit"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="postalCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="rolodexId"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="sponsorName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="sponsorTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="state" />
      </list>
    </property>
  </bean>
</beans>
