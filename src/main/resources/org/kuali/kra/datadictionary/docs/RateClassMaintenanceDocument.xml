<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RateClassMaintenanceDocument" parent="RateClassMaintenanceDocument-parentBean" />

  <bean id="RateClassMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.budget.bo.RateClass" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RateClassMaintenanceDocument-EditRateClass" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>rateClassCode</value>
      </list>
    </property>
    <property name="label" value="Rate Class Maintenance Document" />
    <property name="shortLabel" value="rateClassMaintDoc" />
    <property name="summary" value="Rate Class Maintenance Document" />
    <property name="description" value="Document used to create or update RateClass Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="rateClassMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="RateClassMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kra.rules.RateClassTypeExistenceRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RACL" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RateClassMaintenanceDocument-EditRateClass" parent="RateClassMaintenanceDocument-EditRateClass-parentBean" />

  <bean id="RateClassMaintenanceDocument-EditRateClass-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Rate Class" />
    <property name="title" value="Edit Rate Class" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="rateClassCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="rateClassType"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
