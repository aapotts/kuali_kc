<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CostElementMaintenanceDocument" parent="CostElementMaintenanceDocument-parentBean" />

  <bean id="CostElementMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.budget.bo.CostElement" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CostElementMaintenanceDocument-EditCostElement" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>costElement</value>
      </list>
    </property>
    <property name="label" value="Cost Element Maintenance Document" />
    <property name="shortLabel" value="costElementMaintDoc" />
    <property name="summary" value="Cost Element Maintenance Document" />
    <property name="description" value="Document used to create or update Cost Element Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="costElementMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="CostElementMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kra.rules.BudgetCategoryExistenceRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="COEL" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CostElementMaintenanceDocument-EditCostElement" parent="CostElementMaintenanceDocument-EditCostElement-parentBean" />

  <bean id="CostElementMaintenanceDocument-EditCostElement-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Cost Element" />
    <property name="title" value="Edit Cost Element" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="costElement"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetCategoryCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="onOffCampusFlag"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
