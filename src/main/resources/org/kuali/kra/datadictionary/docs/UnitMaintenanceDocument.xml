<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.kra.bo.Unit</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.kra.rules.UnitMaintenanceDocumentRule</businessRulesClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>UnitMaintenanceDocument</documentTypeName>
        <documentTypeCode>UNIT</documentTypeCode>

        <label>Unit Maintenance Document</label>
        <shortLabel>unitAdministratorMaintDoc</shortLabel>

        <summary>UnitMaintenance Document</summary>
        <description>Document used to create or update Unit Reference objects</description>

        <lockingKeys>
			<field attributeName="unitNumber"/>

        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Unit">
                <maintainableItems>
					<maintainableField name="unitNumber" required="true"/>
                	<maintainableField name="parentUnitNumber" required="true"/>
					<maintainableField name="organizationId" required="true"/>
					<maintainableField name="unitName" required="true"/>

                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
