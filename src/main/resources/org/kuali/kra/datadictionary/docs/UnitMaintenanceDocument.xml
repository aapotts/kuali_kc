<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="UnitMaintenanceDocument" parent="UnitMaintenanceDocument-parentBean" />

  <bean id="UnitMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.Unit" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="UnitMaintenanceDocument-EditUnit" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>unitNumber</value>
      </list>
    </property>
    <property name="label" value="Unit Maintenance Document" />
    <property name="shortLabel" value="unitAdministratorMaintDoc" />
    <property name="summary" value="UnitMaintenance Document" />
    <property name="description" value="Document used to create or update Unit Reference objects" />
    <property name="documentTypeName" value="UnitMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="UNIT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="UnitMaintenanceDocument-EditUnit" parent="UnitMaintenanceDocument-EditUnit-parentBean" />

  <bean id="UnitMaintenanceDocument-EditUnit-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Unit" />
    <property name="title" value="Edit Unit" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="unitNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="parentUnitNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationId"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="unitName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
