<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KimRoleMaintenanceDocument" parent="KimRoleMaintenanceDocument-parentBean" />

  <bean id="KimRoleMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.kim.bo.KimRole" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KimRoleMaintenanceDocument-EditRole" />
        <ref bean="KimRoleMaintenanceDocument-EditRole-Permission" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="label" value="Role Maintenance Document" />
    <property name="shortLabel" value="roleMaintDoc" />
    <property name="summary" value="Role Maintenance Document" />
    <property name="description" value="Document used to create or update Role Reference objects" />
    <property name="documentTypeName" value="KimRoleMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kra.kim.rules.KimRoleRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kra.kim.maintenance.KimRoleMaintenanceDocumentAuthorizer" />
    <property name="documentTypeCode" value="KIMR" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KimRoleMaintenanceDocument-EditRole" parent="KimRoleMaintenanceDocument-EditRole-parentBean" />

  <bean id="KimRoleMaintenanceDocument-EditRole-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Role" />
    <property name="title" value="Edit Role" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="id" />
        <bean parent="MaintainableFieldDefinition"
              p:name="name"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="roleTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description" />
        <bean parent="MaintainableFieldDefinition"
              p:name="descend"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
  <bean id="KimRoleMaintenanceDocument-EditRole-Permission" parent="KimRoleMaintenanceDocument-EditRole-Permission-parentBean" />

  <bean id="KimRoleMaintenanceDocument-EditRole-Permission-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Role-Permission" />
    <property name="title" value="Edit Role-Permission" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="rolePermissions" />
          <property name="sourceClassName" value="org.kuali.kra.kim.bo.KimPermission" />
          <property name="businessObjectClass" value="org.kuali.kra.kim.bo.KimRolePermission" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="permission.name" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="permissionId"
                    p:required="true"
                    p:template="id" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="active"
                    p:defaultValue="true"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
