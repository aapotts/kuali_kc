<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
	<maintenanceDocument>
		<businessObjectClass>
			org.kuali.kra.kim.bo.KimRole
		</businessObjectClass>
		<maintainableClass>
			org.kuali.core.maintenance.KualiMaintainableImpl
		</maintainableClass>
		<businessRulesClass>org.kuali.kra.kim.rules.KimRoleRule</businessRulesClass>
        
		<documentAuthorizerClass>
			org.kuali.kra.kim.maintenance.KimRoleMaintenanceDocumentAuthorizer
		</documentAuthorizerClass>
		<authorizations>
			<authorization action="initiate">
				<workgroups>
					<workgroup>WorkflowAdmin</workgroup>
				</workgroups>
			</authorization>
		</authorizations>

		<documentTypeName>KimRoleMaintenanceDocument</documentTypeName>
		<documentTypeCode>KIMR</documentTypeCode>

		<label>Role Maintenance Document</label>
		<shortLabel>roleMaintDoc</shortLabel>

		<summary>Role Maintenance Document</summary>
		<description>
			Document used to create or update Role Reference objects
		</description>

		<lockingKeys>
			<field attributeName="id" />
		</lockingKeys>

		<maintainableSections>
			<maintainableSection title="Edit Role">
				<maintainableItems>
					<maintainableField name="id" required="false" />
					<maintainableField name="name" required="true" />
					<maintainableField name="roleTypeCode" required="true" />
					<maintainableField name="description" required="false" />
					<maintainableField name="descend" required="true" />
					<maintainableField name="versionNumber" />
				</maintainableItems>
			</maintainableSection>
			<maintainableSection title="Edit Role-Permission">
                <maintainableItems>
                	<maintainableCollection name="rolePermissions" businessObjectClass="org.kuali.kra.kim.bo.KimRolePermission" sourceClassName="org.kuali.kra.kim.bo.KimPermission" sourceAttributeName="rolePermissions">
    	                <maintainableField name="permissionId" template="id" required="true"/>
        	            <maintainableField name="active" required="true">
            	            <defaultValue>true</defaultValue>
                	    </maintainableField>
                    	<maintainableField name="versionNumber" />
                    	<summaryFields>
                    		<summaryField name="permission.name" />
                    	</summaryFields>
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>
		</maintainableSections>
	</maintenanceDocument>
</dictionaryEntry>
