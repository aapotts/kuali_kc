<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="ProtocolOrganizationTypeMaintenanceDocument" parent="ProtocolOrganizationTypeMaintenanceDocument-parentBean" />
	<bean id="ProtocolOrganizationTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
		<property name="businessObjectClass" value="org.kuali.kra.irb.bo.ProtocolOrganizationType" />
		<property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
		<property name="maintainableSections" >
			<list>
				<ref bean="ProtocolOrganizationTypeMaintenanceDocument-EditProtocolOrganizationType" />
			</list>
		</property>
		<property name="lockingKeys" >
			<list>
				<value>protocolOrganizationTypeCode</value>
			</list>
		</property>
		<property name="label" value="Protocol Organization Type Maintenance Document" />
		<property name="shortLabel" value="protocolOrganizationTypeMaintDoc" />
		<property name="summary" value="Protocol Organization Type Maintenance Document" />
		<property name="description" value="Document used to create or update Protocol Organization Type Reference objects" />
		<property name="helpDefinition" >
			<bean parent="HelpDefinition"
				p:parameterNamespace="KRA-M"
				p:parameterName="protocolOrganizationTypeMaintenanceHelp"
				p:parameterDetailType="D" />
			</property>
		<property name="documentTypeName" value="Protocol Organization Type Maintenance Document" />
		<property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
		<property name="documentTypeCode" value="PORG" />
		<property name="authorizations" >
			<list>
				<bean parent="AuthorizationDefinition" >
					<property name="action" value="initiate" />
					<property name="authorizedGroups">
						<set>
							<value>WorkflowAdmin</value>
						</set>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Maintenance Section Definitions -->
	
	<bean id="ProtocolOrganizationTypeMaintenanceDocument-EditProtocolOrganizationType" parent="ProtocolOrganizationTypeMaintenanceDocument-EditProtocolOrganizationType-parentBean" />
	<bean id="ProtocolOrganizationTypeMaintenanceDocument-EditProtocolOrganizationType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="Edit Protocol Organization Type" />
		<property name="title" value="Edit Protocol Organization Type" />
		<property name="maintainableItems" >
			<list>
				<bean parent="MaintainableFieldDefinition"
					p:name="protocolOrganizationTypeCode"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition"
					p:name="description"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition"
					p:name="versionNumber" />
			</list>
		</property>
	</bean>
</beans>
