<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="S2sSubmissionTypeMaintenanceDocument" parent="S2sSubmissionTypeMaintenanceDocument-parentBean" />

  <bean id="S2sSubmissionTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.S2sSubmissionType" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="S2sSubmissionTypeMaintenanceDocument-EditSubmissionTypes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>s2sSubmissionTypeCode</value>
      </list>
    </property>
    <property name="label" value="Submission Type Maintenance Document" />
    <property name="shortLabel" value="ScienceCodeMaintDoc" />
    <property name="summary" value="Submission Type Maintenance Document" />
    <property name="description" value="Document used to create or update Submission Type Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="s2sSubmissionTypeMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="S2sSubmissionTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="SSTY" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="S2sSubmissionTypeMaintenanceDocument-EditSubmissionTypes" parent="S2sSubmissionTypeMaintenanceDocument-EditSubmissionTypes-parentBean" />

  <bean id="S2sSubmissionTypeMaintenanceDocument-EditSubmissionTypes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Submission Types" />
    <property name="title" value="Edit Submission Types" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="s2sSubmissionTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
