<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="DegreeTypeMaintenanceDocument" parent="DegreeTypeMaintenanceDocument-parentBean" />

  <bean id="DegreeTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.DegreeType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="DegreeTypeMaintenanceDocument-EditDegreeType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>degreeCode</value>
      </list>
    </property>
    <property name="label" value="Degree Type Maintenance Document" />
    <property name="shortLabel" value="degreeTypeMaintDoc" />
    <property name="summary" value="Degree Type Maintenance Document" />
    <property name="description" value="Document used to create or update Degree Type Reference objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KRA-M"
            p:parameterName="degreeTypeMaintenanceHelp"
            p:parameterDetailType="D" />
    </property>
    <property name="documentTypeName" value="DegreeTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="DEGT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="DegreeTypeMaintenanceDocument-EditDegreeType" parent="DegreeTypeMaintenanceDocument-EditDegreeType-parentBean" />

  <bean id="DegreeTypeMaintenanceDocument-EditDegreeType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Degree Type" />
    <property name="title" value="Edit Degree Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="degreeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
