            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>DegreeTypeMaintenanceDocument</documentTypeName>
        <documentTypeCode>DEGT</documentTypeCode>

        <label>Degree Type Maintenance Document</label>
        <shortLabel>degreeTypeMaintDoc</shortLabel>

