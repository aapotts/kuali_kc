        <help parameterNamespace="KRA-M" parameterDetailType="D" parameterName="degreeTypeMaintenanceHelp" />

        <lockingKeys>
            <field attributeName="degreeCode"/>

        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Degree Type">
                <maintainableItems>
                    <maintainableField name="degreeCode" required="true"/>
                    <maintainableField name="description" required="false"/>
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
