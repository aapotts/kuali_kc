<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.kra.kim.bo.KimRolePermission</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KimRolePermissionMaintenanceDocument</documentTypeName>
        <documentTypeCode>KIRP</documentTypeCode>

        <label>Role-Permission Maintenance Document</label>
        <shortLabel>rolePermissionMaintDoc</shortLabel>

        <summary>Role-Permission Maintenance Document</summary>
        <description>Document used to create or update Role-Permission Reference objects</description>

        <lockingKeys>
            <field attributeName="roleId"/>
            <field attributeName="permissionId"/>
        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Role-Permission">
                <maintainableItems>
                    <maintainableField name="roleId" required="true"/>
                    <maintainableField name="permissionId" required="true"/>
                    <maintainableField name="active" required="true">
                        <defaultValue>true</defaultValue>
                    </maintainableField>
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
