<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="NsfCodeMaintenanceDocument" parent="NsfCodeMaintenanceDocument-parentBean" />

  <bean id="NsfCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.bo.NsfCode" />
    <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="NsfCodeMaintenanceDocument-EditNSFCodes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>nsfSequenceNumber</value>
      </list>
    </property>
    <property name="label" value="NSF Code Maintenance Document" />
    <property name="shortLabel" value="NSFCodeMaintDoc" />
    <property name="summary" value="NSF Code Maintenance Document" />
    <property name="description" value="Document used to create or update NSF Code Reference objects" />
    <property name="documentTypeName" value="NsfCodeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="SCIC" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="NsfCodeMaintenanceDocument-EditNSFCodes" parent="NsfCodeMaintenanceDocument-EditNSFCodes-parentBean" />

  <bean id="NsfCodeMaintenanceDocument-EditNSFCodes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit NSF Codes" />
    <property name="title" value="Edit NSF Codes" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="nsfSequenceNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="nsfCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
