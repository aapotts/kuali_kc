<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BudgetPeriodTypeMaintenanceDocument" parent="BudgetPeriodTypeMaintenanceDocument-parentBean" />

  <bean id="BudgetPeriodTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kra.budget.bo.BudgetPeriodType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BudgetPeriodTypeMaintenanceDocument-EditBudgetPeriodType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>budgetPeriodTypeCode</value>
      </list>
    </property>
    <property name="label" value="BudgetPeriodType Maintenance Document" />
    <property name="shortLabel" value="budgetPeriodTypeMaintDoc" />
    <property name="summary" value="BudgetPeriodType Maintenance Document" />
    <property name="description" value="Document used to create or update BudgetPeriodType Reference objects" />
    <property name="documentTypeName" value="BudgetPeriodTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BUPE" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BudgetPeriodTypeMaintenanceDocument-EditBudgetPeriodType" parent="BudgetPeriodTypeMaintenanceDocument-EditBudgetPeriodType-parentBean" />

  <bean id="BudgetPeriodTypeMaintenanceDocument-EditBudgetPeriodType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit BudgetPeriodType" />
    <property name="title" value="Edit BudgetPeriodType" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetPeriodTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
