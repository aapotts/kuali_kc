<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.kra.bo.CustomAttributeDocument</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <!-- right now, inactive is allowed for custom attr doc that has been reference. so disable this rule for now.  
        <businessRulesClass>org.kuali.kra.rules.CustomAttributeDocumentMaintenanceDocumentRule</businessRulesClass>
		-->
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>CustomAttributeDocumentMaintenanceDocument</documentTypeName>
        <documentTypeCode>CADM</documentTypeCode>

        <label>CustomAttributeDocument Maintenance Document</label>
        <shortLabel>customAttributeDocumentMaintDoc</shortLabel>

        <summary>CustomAttributeDocument Maintenance Document</summary>
        <description>Document used to create or update CustomAttributeDocument Reference objects</description>
        <help parameterNamespace="KRA-M" parameterDetailType="D" parameterName="customAttributeDocumentMaintenanceHelp" />

        <lockingKeys>
        	<field attributeName="customAttributeId"/>
			<field attributeName="documentTypeCode"/>

        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit CustomAttributeDocument">
                <maintainableItems>
                	<maintainableField name="customAttributeId" required="true"/>
					<maintainableField name="documentTypeCode" required="true"/>
					<maintainableField name="required" required="false"/>
					<maintainableField name="typeName" required="false"/>
					<maintainableField name="active" />

                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
