<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.proposaldevelopment.bo.ActivityType">

        <inquiry>
            <title>Activity Type</title>

            <inquirySections><inquirySection title="Activity Type"><inquiryFields>
                <field attributeName="activityTypeCode" forceInquiry="true" />
                <field attributeName="description" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Activity Type Lookup</title>
			<menubar>
				<![CDATA[<a href="/SampleRiceClient/index.html">Main</a>]]>
			</menubar>
            <instructions>Look up a Activity Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="activityTypeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="activityTypeCode" required="false" />
                <lookupField attributeName="description" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="activityTypeCode" forceInquiry="true" />
                <field attributeName="description" forceInquiry="false"/>
            </resultFields>
        </lookup>

        <titleAttribute>activityTypeCode</titleAttribute>

        <attributes>

            <attribute name="activityTypeCode">
                <label>Activity Type</label>
                <shortLabel>Activity Type</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Activity Type</summary>
                <description>Activity Type</description>
			</attribute>

            <attribute name="description" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="40" />
                </control>

                <summary>Description</summary>
                <description>Description</description>
			</attribute>
			
		</attributes>
    </businessObject>

</dictionaryEntry>