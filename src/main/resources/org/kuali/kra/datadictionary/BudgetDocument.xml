<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">

<dictionaryEntry>
    <transactionalDocument>

        <documentClass>org.kuali.kra.budget.document.BudgetDocument</documentClass>
        <businessRulesClass>org.kuali.kra.budget.rules.BudgetDocumentRule</businessRulesClass>
		<usePessimisticLocking>true</usePessimisticLocking>
		<useWorkflowPessimisticLocking>false</useWorkflowPessimisticLocking>

        <documentAuthorizerClass>org.kuali.kra.budget.document.authorization.BudgetDocumentAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>BudgetDocument</documentTypeName>
        <documentTypeCode>BUDG</documentTypeCode>

        <label>Budget Document</label>
        <shortLabel>Budget Doc</shortLabel>

        <attributes>
			<attribute name="proposalNumber">
                <label>Proposal Number</label>
                <shortLabel>Proposal Number</shortLabel>

                <maxLength>12</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <required>false</required>

                <control>
					<hidden />
                </control>

                <summary>Proposal Number</summary>
                <description>Proposal Number</description>
			</attribute>

            <attributeReference name="costSharingAmount" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Cost Sharing Amount </label>
			<shortLabel>Cost Sharing Amount </shortLabel>
			<summary>Cost Sharing Amount </summary>
			<description>Cost Sharing Amount </description>
			</attributeReference>

            <attributeReference name="endDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>Project End Date</label>
                <shortLabel>Project End Dt</shortLabel>

                <summary>Project End Date</summary>
                <description>Project End Date</description>
      		</attributeReference>

            <attributeReference name="finalVersionFlag" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Final?</label>
                <shortLabel>Final</shortLabel>
                <summary>Final Version Flag</summary>
                <description>Final Version Flag</description>
			</attributeReference>
            <attributeReference name="modularBudgetFlag" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Modular Budget?</label>
                <shortLabel>Modular Budget?</shortLabel>
                <summary>Modular Budget Flag</summary>
                <description>Modular Budget Flag</description>
			</attributeReference>


			<attribute name="ohRateClassCode">
			<label>F&amp;A Rate Type </label>
			<shortLabel>F&amp;A Rate Type </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<select valuesFinderClass="org.kuali.kra.budget.lookup.keyvalue.BudgetRateTypeValuesFinder" />
			</control>
			<summary>F&amp;A Rate Type </summary>
			<description>F&amp;A Rate Type </description>
			</attribute>

			<attribute name="ohRateTypeCode">
			<label>F&amp;A Rate Type</label>
			<shortLabel>F&amp;A Rate Type</shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
                    <text size="3" />
			</control>
			<summary>F&amp;A Rate Type</summary>
			<description>F&amp;A Rate Type</description>
			</attribute>

            <attributeReference name="residualFunds" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Residual Funds </label>
			<shortLabel>Residual Funds </shortLabel>
			<summary>Residual Funds </summary>
			<description>Residual Funds </description>
			</attributeReference>

            <attributeReference name="startDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>Project Start Date</label>
                <shortLabel>Project Start Date </shortLabel>

                <summary>Project Start Date</summary>
                <description>Project Start Date</description>
      		</attributeReference>


            <attributeReference  name="totalCost" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Total Cost </label>
			<shortLabel>Total Cost </shortLabel>
			<summary>Total Cost </summary>
			<description>Total Cost </description>
			</attributeReference>


            <attributeReference  name="totalCostLimit" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Total Cost Limit </label>
			<shortLabel>Total Cost Limit </shortLabel>
			<summary>Total Cost Limit </summary>
			<description>Total Cost Limit </description>
			</attributeReference>


            <attributeReference name="totalDirectCost" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Total Direct Cost </label>
			<shortLabel>Direct Cost </shortLabel>
			<summary>Total Direct Cost </summary>
			<description>Total Direct Cost </description>
			</attributeReference>

            <attributeReference name="totalIndirectCost" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Total Indirect Cost </label>
			<shortLabel>F &amp; A </shortLabel>
			<summary>Total Indirect Cost </summary>
			<description>Total Indirect Cost </description>
			</attributeReference>

            <attributeReference name="underrecoveryAmount" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="genericAmount">
			<label>Underrecovery Amount </label>
			<shortLabel>Underrecovery Amount </shortLabel>
			<summary>Underrecovery Amount </summary>
			<description>Underrecovery Amount </description>
			</attributeReference>

			<attribute name="urRateClassCode">
			<label>Unrecovered F &amp; A Rate Type</label>
			<shortLabel>Unrecovered F &amp; A Rate Type</shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
                    <select valuesFinderClass="org.kuali.kra.budget.lookup.keyvalue.BudgetRateTypeValuesFinder" />
			</control>
			<summary>Ur Rate Class Code </summary>
			<description>Ur Rate Class Code </description>
			</attribute>

			<attribute name="comments">
				<label>Comments</label>
				<shortLabel>Comments</shortLabel>

				<maxLength>2000</maxLength>
				<validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

				<required>false</required>

				<control>
                    <textarea rows="3" cols="30" />
				</control>

				<summary>The Comments for this budget.</summary>
				<description>The Comments for this budget.</description>
			</attribute>
			
			<attribute name="budgetJustification">
				<label>Budget Justification</label>
				<shortLabel>Budget Justification</shortLabel>

				<maxLength>4000</maxLength>
				<validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

				<required>false</required>

				<control>
                    <textarea rows="8" cols="60" />
				</control>

				<summary>Budget Justification</summary>
				<description>Budget Justification</description>
			</attribute>
			
			<attribute name="budgetVersionNumber">
			<label>Budget Version Number</label>
			<shortLabel>Version #</shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
                    <text size="3" />
			</control>
			<summary>Budget Version Number </summary>
			<description>Budget Version Number for header display </description>
			</attribute>
			
			<attribute name="onOffCampusFlag">
			<label>On/Off Campus</label>
			<shortLabel>On/Off Campus</shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
                    <select valuesFinderClass="org.kuali.kra.budget.lookup.keyvalue.BudgetOnOffCampusValuesFinder" />
			</control>
			<summary>On Off Campus flag</summary>
			<description>On Off Campus flag allowing the user to set all expense line items to be either 'all on' or 'all off-campus'; overriding the object code level defaults.  </description>
			</attribute>
			
			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>

        <summary>
            <![CDATA[&nbsp;]]>
        </summary>
        <description>Doing it right</description>
        <help parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetDocumentHelp" />

        <allowsCopy>true</allowsCopy>

        <headerNavigation>
          <headerNavigationTab>
            <navigateTo>versions</navigateTo>
            <displayName>Budget Versions</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetVersionsHelp"/> 
          </headerNavigationTab>
          <headerNavigationTab>
            <navigateTo>parameters</navigateTo>
            <displayName>Parameters</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetParametersHelp"/> 
          </headerNavigationTab>
          <headerNavigationTab>
            <navigateTo>rates</navigateTo>
            <displayName>Rates</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetRatesHelp"/> 
          </headerNavigationTab>
          <headerNavigationTab>
            <navigateTo>summaryTotals</navigateTo>
            <displayName>Summary</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetSummaryHelp"/> 
          </headerNavigationTab>          
          <headerNavigationTab>
            <navigateTo>personnel</navigateTo>
            <displayName>Personnel</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetPersonnelHelp"/> 
          </headerNavigationTab>          
          <headerNavigationTab>
            <navigateTo>expenses</navigateTo>
            <displayName>Non-Personnel</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetNonPersonnelHelp"/> 
          </headerNavigationTab>
          <headerNavigationTab>
            <navigateTo>distributionAndIncome</navigateTo>
            <displayName>Distribution &amp; Income</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetDistributionAndIncomeHelp"/> 
          </headerNavigationTab>
          <headerNavigationTab>
            <navigateTo>modularBudget</navigateTo>
            <displayName>Modular Budget</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetModularBudgetHelp"/> 
          </headerNavigationTab>                    
          <headerNavigationTab>
            <navigateTo>budgetActions</navigateTo>
            <displayName>Budget Actions</displayName>
             <pageHelp parameterNamespace="KRA-B" parameterDetailType="D" parameterName="budgetActionsHelp"/> 
          </headerNavigationTab>
        </headerNavigation>

        <allowsErrorCorrection>false</allowsErrorCorrection>
    </transactionalDocument>
</dictionaryEntry>
