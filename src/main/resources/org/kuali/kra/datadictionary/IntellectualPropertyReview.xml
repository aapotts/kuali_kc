<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="InstitutionalProposal" parent="InstitutionalProposal-parentBean" />
    <bean id="InstitutionalProposal-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.kra.institutionalproposal.ipreview.IntellectualPropertyReview" />
        <property name="titleAttribute" value="proposalId" />
        <property name="attributes" >
            <list>
                <ref bean="InstitutionalProposal-proposalId" />
                <ref bean="InstitutionalProposal-ipReviewRequirementTypeCode" />
                <ref bean="InstitutionalProposal-reviewSubmissionDate" />
                <ref bean="InstitutionalProposal-reviewReceiveDate" />
                <ref bean="InstitutionalProposal-reviewResultCode" />
                <ref bean="InstitutionalProposal-ipReviewer" />
                <ref bean="InstitutionalProposal-versionNumber" />
            </list>
        </property>
    </bean>
    
    <!-- Attribute Definitions -->
    
    <bean id="InstitutionalProposal-ipReviewRequirementTypeCode" parent="InstitutionalProposal-ipReviewRequirementTypeCode-parentBean" />
    <bean id="InstitutionalProposal-ipReviewRequirementTypeCode-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="ipReviewRequirementTypeCode" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Review Requirement" />
        <property name="shortLabel" value="Review Requirement" />
        <property name="maxLength" value="22" />
        <property name="validationPattern">
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="10" />
        </property>
        <property name="summary" value="Review Requirement" />
        <property name="description" value="Review Requirement" />
    </bean>

    <bean id="InstitutionalProposal-reviewSubmissionDate" parent="InstitutionalProposal-reviewSubmissionDate-parentBean" />
    <bean id="InstitutionalProposal-reviewSubmissionDate-parentBean" abstract="true" parent="KraAttributeReferenceDummy-genericDate" >
        <property name="name" value="reviewSubmissionDate" />
        <property name="label" value="Submitted for Review" />
        <property name="shortLabel" value="Submitted for Review" />
        <property name="summary" value="Submitted for Review" />
        <property name="description" value="Submitted for Review" />
    </bean>

    <bean id="InstitutionalProposal-reviewReceiveDate" parent="InstitutionalProposal-reviewReceiveDate-parentBean" />
    <bean id="InstitutionalProposal-reviewReceiveDate-parentBean" abstract="true" parent="KraAttributeReferenceDummy-genericDate" >
        <property name="name" value="reviewReceiveDate" />
        <property name="label" value="Date Finished Review" />
        <property name="shortLabel" value="Date Finished Review" />
        <property name="summary" value="Date Finished Review" />
        <property name="description" value="Date Finished Review" />
    </bean>

    <bean id="InstitutionalProposal-reviewResultCode" parent="InstitutionalProposal-reviewResultCode-parentBean" />
    <bean id="InstitutionalProposal-reviewResultCode-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="reviewResultCode" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Review Results" />
        <property name="shortLabel" value="Review Results" />
        <property name="maxLength" value="22" />
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="10" />
        </property>
        <property name="summary" value="Review Results" />
        <property name="description" value="Review Results" />
    </bean>

    <bean id="InstitutionalProposal-ipReviewer" parent="InstitutionalProposal-ipReviewer-parentBean" />
    <bean id="InstitutionalProposal-ipReviewer-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="ipReviewer" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Reviewer" />
        <property name="shortLabel" value="Reviewer" />
        <property name="maxLength" value="9" />
        <property name="validationPattern" >
            <bean parent="AlphaNumericValidationPattern" />
        </property>
        <property name="control">
            <bean parent="TextControlDefinition"
                p:size="10" />
        </property>
        <property name="summary" value="Reviewer" />
        <property name="description" value="Reviewer" />
    </bean>
        
</beans>
