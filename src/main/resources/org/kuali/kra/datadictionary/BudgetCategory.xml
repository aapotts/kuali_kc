<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.budget.bo.BudgetCategory">

        <inquiry>
            <title>Budget Category</title>

            <inquirySections><inquirySection title="Budget Category"><inquiryFields>
            	<field attributeName="budgetCategoryCode" forceInquiry="true"/>
				<field attributeName="budgetCategoryType.description"/>
				<field attributeName="description"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Budget Category Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Budget Category</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="budgetCategoryCode"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="budgetCategoryCode" required="false"/>
				<lookupField attributeName="budgetCategoryTypeCode" required="false"/>
				<lookupField attributeName="description" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="budgetCategoryCode" forceInquiry="true"/>
				<field attributeName="budgetCategoryType.description" forceInquiry="false"/>
				<field attributeName="description" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>budgetCategoryCode</titleAttribute>
        
        <attributes>

	        <attribute name="budgetCategoryCode">
			<label>Budget Category Code </label>
			<shortLabel>Budget Category Code </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><numeric /></validationPattern>
			<control>
				<text size="3"/> 
			</control>
			<summary>Budget Category Code </summary>
			<description>Budget Category Code </description>
			</attribute>

			<attribute name="budgetCategoryTypeCode">
			<label>Category Type </label>
			<shortLabel>Category Type </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><alphaNumeric /></validationPattern>
			<control>
				<text size="4" />
			</control>
			<summary>Category Type </summary>
			<description>Category Type </description>
			</attribute>

			<attributeReference name="budgetCategoryType.description" sourceClassName="org.kuali.kra.budget.bo.BudgetCategoryType" sourceAttributeName="description" >
			    <label>Budget Category Type</label>
			    <shortLabel>Budget Category</shortLabel>
            </attributeReference>

            <attributeReference name="description" sourceClassName="org.kuali.kra.bo.KraAttributeReferenceDummy" sourceAttributeName="description" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>

        <relationships>
            <relationship objectAttributeName="budgetCategoryType">
                <primitiveAttribute sourceName="budgetCategoryTypeCode" targetName="budgetCategoryTypeCode" />
                <supportAttribute sourceName="budgetCategoryType.description" targetName="description" identifier="true" />
            </relationship>
        </relationships>
    </businessObject>

</dictionaryEntry>
