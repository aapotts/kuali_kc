<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="FinancialEntityUnit" parent="FinancialEntityUnit-parentBean" />
    <bean id="FinancialEntityUnit-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.kra.coi.personfinancialentity.FinancialEntityUnit" />
        <property name="objectLabel" value="Financial Entity Unit" />
        <property name="inquiryDefinition" >
            <ref bean="FinancialEntityUnit-inquiryDefinition" />
        </property>
        <property name="lookupDefinition" >
            <ref bean="FinancialEntityUnit-lookupDefinition" />
        </property>
        <property name="titleAttribute" value="financialEntityUnitsId" />
        <property name="attributes" >
            <list>
                <ref bean="FinancialEntityUnit-financialEntityUnitsId" />
                <ref bean="FinancialEntityUnit-financialEntityReporterId" />
                <ref bean="FinancialEntityUnit-unitNumber" />
                <ref bean="FinancialEntityUnit-leadUnitFlag" />
                <ref bean="FinancialEntityUnit-personId" />
                <ref bean="FinancialEntityUnit-versionNumber" />
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->
    
    <bean id="FinancialEntityUnit-financialEntityUnitsId" parent="FinancialEntityUnit-financialEntityUnitsId-parentBean" />
    <bean id="FinancialEntityUnit-financialEntityUnitsId-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="financialEntityUnitsId" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Financial Entity Units Id" />
        <property name="shortLabel" value="Financial Entity Units Id" />
        <property name="maxLength" value="12" />
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="12" />
        </property>
        <property name="summary" value="Financial Entity Units Id" />
        <property name="description" value="Financial Entity Units Id" />
    </bean>

    <bean id="FinancialEntityUnit-financialEntityReporterId" parent="FinancialEntityUnit-financialEntityReporterId-parentBean" />
    <bean id="FinancialEntityUnit-financialEntityReporterId-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="financialEntityReporterId" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Financial entity disclosure Id" />
        <property name="shortLabel" value="Financial entity disclosure Id" />
        <property name="maxLength" value="12" />
        <property name="validationPattern" >
            <bean parent="AlphaNumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="12" />
        </property>
        <property name="summary" value="Financial entity disclosure Id" />
        <property name="description" value="Financial entity disclosure Id" />
    </bean>

    <bean id="FinancialEntityUnit-unitNumber" parent="FinancialEntityUnit-unitNumber-parentBean" />
    <bean id="FinancialEntityUnit-unitNumber-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="unitNumber" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Unit Number" />
        <property name="shortLabel" value="Unit Number" />
        <property name="maxLength" value="8" />
        <property name="validationPattern" >
            <bean parent="AnyCharacterValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="8" />
        </property>
        <property name="summary" value="Unit Number" />
        <property name="description" value="Unit Number" />
    </bean>

    <bean id="FinancialEntityUnit-leadUnitFlag" parent="FinancialEntityUnit-leadUnitFlag-parentBean" />
    <bean id="FinancialEntityUnit-leadUnitFlag-parentBean" abstract="true" parent="AttributeReferenceDummy-genericBoolean" >
        <property name="name" value="leadUnitFlag" />
        <property name="label" value="Lead" />
        <property name="shortLabel" value="Lead" />
        <property name="summary" value="Lead Unit Flag" />
        <property name="description" value="Lead Unit Flag" />
    </bean>

    <bean id="FinancialEntityUnit-personId" parent="FinancialEntityUnit-personId-parentBean" />
    <bean id="FinancialEntityUnit-personId-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="personId" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Person Id" />
        <property name="shortLabel" value="Person Id" />
        <property name="maxLength" value="40" />
        <property name="validationPattern" >
            <bean parent="AlphaNumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="10" />
        </property>
        <property name="summary" value="Person Id" />
        <property name="description" value="Person Id" />
    </bean>

    <bean id="FinancialEntityUnit-versionNumber" parent="FinancialEntityUnit-versionNumber-parentBean" />
    <bean id="FinancialEntityUnit-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
    </bean>

    <!-- Business Object Inquiry Definition -->
    <bean id="FinancialEntityUnit-inquiryDefinition" parent="FinancialEntityUnit-inquiryDefinition-parentBean" />
    <bean id="FinancialEntityUnit-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
        <property name="title" value="Financial Entity Units Id" />
        <property name="inquirySections" >
            <list>
                <bean parent="InquirySectionDefinition">
                    <property name="title" value="Financial Entity Units Id" />
                    <property name="numberOfColumns" value="1" />
                    <property name="inquiryFields" >
                        <list>
                            <bean parent="FieldDefinition"
                                p:attributeName="financialEntityUnitsId" 
                                p:forceInquiry="true" />
                             <bean parent="FieldDefinition"
                                p:attributeName="unitNumber" />
                            <bean parent="FieldDefinition"
                                p:attributeName="leadUnitFlag" />
                            <bean parent="FieldDefinition"
                                p:attributeName="personId" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->
    <bean id="FinancialEntityUnit-lookupDefinition" parent="FinancialEntityUnit-lookupDefinition-parentBean" />
    <bean id="FinancialEntityUnit-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
        <property name="title" value="Financial Entity Units Lookup" />
        <property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />

        <property name="defaultSort" >
            <bean parent="SortDefinition" >
        </bean>
        </property>
        <property name="lookupFields" >
            <list>
                <bean parent="FieldDefinition"
                    p:attributeName="financialEntityUnitsId" 
                    p:forceInquiry="true" />
                <bean parent="FieldDefinition"
                    p:attributeName="unitNumber" />
                <bean parent="FieldDefinition"
                    p:attributeName="leadUnitFlag" />
                <bean parent="FieldDefinition"
                    p:attributeName="personId" />
            </list>
        </property>
        <property name="resultFields" >
            <list>
                <bean parent="FieldDefinition"
                    p:attributeName="financialEntityUnitsId" 
                    p:forceInquiry="true" />
                <bean parent="FieldDefinition"
                    p:attributeName="unitNumber" />
                <bean parent="FieldDefinition"
                    p:attributeName="leadUnitFlag" />
                <bean parent="FieldDefinition"
                    p:attributeName="personId" />
            </list>
        </property>
    </bean>
</beans>
