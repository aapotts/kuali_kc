<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.Right">

        <inquiry>
            <title>Rights</title>

            <inquirySections><inquirySection title="Rights"><inquiryFields>
            	<field attributeName="rightId" forceInquiry="true"/>
				<field attributeName="descendFlag"/>
				<field attributeName="description"/>
				<field attributeName="rightType"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Rights Lookup</title>
			<menubar>
				<![CDATA[<a href="/kra-dev/">Main</a>]]>
			</menubar>
            <instructions>Look up a Rights</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="rightId"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="rightId" required="false"/>
				<lookupField attributeName="descendFlag" required="false"/>
				<lookupField attributeName="description" required="false"/>
				<lookupField attributeName="rightType" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="rightId" forceInquiry="true"/>
				<field attributeName="descendFlag" forceInquiry="false"/>
				<field attributeName="description" forceInquiry="false"/>
				<field attributeName="rightType" forceInquiry="false"/>

            </resultFields>
        </lookup>

        <titleAttribute>rightId</titleAttribute>
        <attributes>

	        <attribute name="rightId">
			<label>Right Id </label>
			<shortLabel>Right Id </shortLabel>
			<maxLength>30</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="30" />
			</control>
			<summary>Right Id </summary>
			<description>Right Id </description>
			</attribute>

			<attribute name="descendFlag">
			<label>Descend Flag </label>
			<shortLabel>Descend Flag </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="1" />
			</control>
			<summary>Descend Flag </summary>
			<description>Descend Flag </description>
			</attribute>

			<attribute name="description">
			<label>Description </label>
			<shortLabel>Description </shortLabel>
			<maxLength>80</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="80" />
			</control>
			<summary>Description </summary>
			<description>Description </description>
			</attribute>

			<attribute name="rightType">
			<label>Right Type </label>
			<shortLabel>Right Type </shortLabel>
			<maxLength>1</maxLength>
			<validationPattern><anyCharacter /></validationPattern>
			<control>
				<text size="1" />
			</control>
			<summary>Right Type </summary>
			<description>Right Type </description>
			</attribute>

		</attributes>
    </businessObject>

</dictionaryEntry>
