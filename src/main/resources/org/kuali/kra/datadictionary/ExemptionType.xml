<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kra.bo.ExemptionType">

        <inquiry>
            <title>Exemption Type</title>

            <inquirySections><inquirySection title="Exemption Type"><inquiryFields>
            	<field attributeName="exemptionTypeCode" forceInquiry="true"/>
				<field attributeName="description" forceInquiry="true"/>
				<field attributeName="detailedDescription"/>

            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Exemption Type Lookup</title>
			<menubar>
				<![CDATA[<a href="index.jsp">Main</a>]]>
			</menubar>
            <instructions>Look up a Exemption Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                	<sortAttribute attributeName="exemptionTypeCode"/>
					<sortAttribute attributeName="description"/>

                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="exemptionTypeCode" required="false"/>
				<lookupField attributeName="description" required="false"/>
				<lookupField attributeName="detailedDescription" required="false"/>

            </lookupFields>

            <resultFields>
            	<field attributeName="exemptionTypeCode" forceInquiry="true"/>
				<field attributeName="description" forceInquiry="true"/>
				<field attributeName="detailedDescription" forceInquiry="false"/>

            </resultFields>
        </lookup>

		<titleAttribute>exemptionTypeCode</titleAttribute>
        <attributes>

			<attribute name="detailedDescription">
			<label>Detailed Description</label>
			<shortLabel>Detailed Description</shortLabel>
			<maxLength>2000</maxLength>
            <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>
            <control>
                 <textarea rows="5" cols="40" />
            </control>
			<summary>Detailed Description</summary>
			<description>This is the detailed description of the exemption number.  Source is 45cfr46.101(b).</description>
			</attribute>

	        <attribute name="exemptionTypeCode">
			<label>Exemption Type </label>
			<shortLabel>Exemption Type </shortLabel>
			<maxLength>3</maxLength>
			<validationPattern><alphaNumeric/></validationPattern>
			<control>
				<text size="4"/>
			</control>
			<summary>Exemption Type </summary>
			<description>Exemption Type </description>
			</attribute>

			<attribute name="description">
			<label>Exempt # </label>
			<shortLabel>Exempt # </shortLabel>
			<maxLength>200</maxLength>
			<validationPattern><alphaNumeric/></validationPattern>
			<control>
				<text size="40" />
			</control>
			<summary>Description </summary>
			<description>This is the exemption number </description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

		</attributes>
    </businessObject>

</dictionaryEntry>
