<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProposalSpecialReview" parent="ProposalSpecialReview-parentBean" />

  <bean id="ProposalSpecialReview-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kra.proposaldevelopment.bo.ProposalSpecialReview" />
		<property name="objectLabel" value="Proposal Special Review" />
    <property name="inquiryDefinition" >
      <ref bean="ProposalSpecialReview-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="ProposalSpecialReview-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="specialReviewNumber" />
    <property name="attributes" >
      <list>
        <ref bean="ProposalSpecialReview-proposalNumber" />
        <ref bean="ProposalSpecialReview-specialReviewNumber" />
        <ref bean="ProposalSpecialReview-applicationDate" />
        <ref bean="ProposalSpecialReview-approvalDate" />
        <ref bean="ProposalSpecialReview-expirationDate" />
        <ref bean="ProposalSpecialReview-approvalTypeCode" />
        <ref bean="ProposalSpecialReview-comments" />
        <ref bean="ProposalSpecialReview-protocolNumber" />
        <ref bean="ProposalSpecialReview-specialReviewCode" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="ProposalSpecialReview-proposalNumber" parent="ProposalSpecialReview-proposalNumber-parentBean" />

  <bean id="ProposalSpecialReview-proposalNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="proposalNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Proposal Number" />
    <property name="shortLabel" value="Proposal Number" />
    <property name="maxLength" value="12" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="Proposal Number" />
    <property name="description" value="Proposal Number" />
  </bean>
  <bean id="ProposalSpecialReview-specialReviewNumber" parent="ProposalSpecialReview-specialReviewNumber-parentBean" />

  <bean id="ProposalSpecialReview-specialReviewNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="specialReviewNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Special Review Number" />
    <property name="shortLabel" value="Special Review Number" />
    <property name="maxLength" value="3" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="Special Review Number" />
    <property name="description" value="Special Review Number" />
  </bean>
  <bean id="ProposalSpecialReview-applicationDate" parent="ProposalSpecialReview-applicationDate-parentBean" />

  <bean id="ProposalSpecialReview-applicationDate-parentBean" abstract="true" parent="AttributeReferenceDummy-genericDate">
    <property name="name" value="applicationDate" />
    <property name="label" value="Application Date" />
    <property name="shortLabel" value="Application Date" />
    <property name="required" value="false" />
    <property name="summary" value="The date the PI submitted a protocol/request for permission to the relevant institutional committee/person" />
    <property name="description" value="The application date is the date the PI submitted a protocol/request for permission to the relevant institutional committee/person for special Review." />
  </bean>
  <bean id="ProposalSpecialReview-approvalDate" parent="ProposalSpecialReview-approvalDate-parentBean" />

  <bean id="ProposalSpecialReview-approvalDate-parentBean" abstract="true" parent="AttributeReferenceDummy-genericDate">
    <property name="name" value="approvalDate" />
    <property name="label" value="Approval Date" />
    <property name="shortLabel" value="Approval Date" />
    <property name="required" value="false" />
    <property name="summary" value="The date the protocol/request for permission was approved by the relevant institutional committee/person" />
    <property name="description" value="The approval date is the date the protocol/request for permission was approved by the relevant institutional committee/person." />
  </bean>
  <bean id="ProposalSpecialReview-expirationDate" parent="ProposalSpecialReview-expirationDate-parentBean" />

  <bean id="ProposalSpecialReview-expirationDate-parentBean" abstract="true" parent="AttributeReferenceDummy-genericDate">
    <property name="name" value="expirationDate" />
    <property name="label" value="Expiration Date" />
    <property name="shortLabel" value="Expiration Date" />
    <property name="required" value="false" />
    <property name="summary" value="The date the protocol/request for permission was expired" />
    <property name="description" value="The expiration date is the date the protocol/request for permission was expired." />
  </bean>
  <bean id="ProposalSpecialReview-approvalTypeCode" parent="ProposalSpecialReview-approvalTypeCode-parentBean" />

  <bean id="ProposalSpecialReview-approvalTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="approvalTypeCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Approval Status" />
    <property name="shortLabel" value="Approval Type Code" />
    <property name="maxLength" value="3" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.SpecialReviewApprovalTypeValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
    <property name="summary" value="Approval Type Code" />
    <property name="description" value="The approval status indicates if the special review relevant to the document (proposal/award/irb) is pending approval, or already approved." />
  </bean>
  <bean id="ProposalSpecialReview-comments" parent="ProposalSpecialReview-comments-parentBean" />

  <bean id="ProposalSpecialReview-comments-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="comments" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Comments" />
    <property name="shortLabel" value="Comments" />
    <property name="maxLength" value="5000" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="3"
            p:cols="20" />
    </property>
    <property name="summary" value="Comments" />
    <property name="description" value="This field allows the user to enter comments relevant to special review." />
  </bean>
  <bean id="ProposalSpecialReview-protocolNumber" parent="ProposalSpecialReview-protocolNumber-parentBean" />

  <bean id="ProposalSpecialReview-protocolNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="protocolNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Protocol Number" />
    <property name="shortLabel" value="Protocol Number" />
    <property name="maxLength" value="20" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="20" />
    </property>
    <property name="summary" value="Protocol Number" />
    <property name="description" value="The protocol # is the number assigned to the protocol submitted by the PI to the institution&apos;s relevant committee (e.g. IACUC, IRB, etc.)." />
  </bean>
  <bean id="ProposalSpecialReview-specialReviewCode" parent="ProposalSpecialReview-specialReviewCode-parentBean" />

  <bean id="ProposalSpecialReview-specialReviewCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="specialReviewCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Type" />
    <property name="shortLabel" value="Special Review Code" />
    <property name="maxLength" value="3" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:businessObjectClass="org.kuali.kra.bo.SpecialReview"
            p:valuesFinderClass="org.kuali.kra.lookup.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
            p:includeKeyInLabel="false"
            p:includeBlankRow="false"
            p:keyAttribute="specialReviewCode"
            p:labelAttribute="description" />
    </property>
    <property name="summary" value="Special Review Code" />
    <property name="description" value="The type indicates which special review, if any, is relevant to the document (proposal/award/irb)." />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="ProposalSpecialReview-inquiryDefinition" parent="ProposalSpecialReview-inquiryDefinition-parentBean" />

  <bean id="ProposalSpecialReview-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Prop Special Review" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Prop Special Review" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="proposalNumber"
                    p:forceInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="specialReviewNumber"
                    p:forceInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="applicationDate" />
              <bean parent="FieldDefinition"
                    p:attributeName="approvalDate" />
              <bean parent="FieldDefinition"
                    p:attributeName="expirationDate" />
              <bean parent="FieldDefinition"
                    p:attributeName="approvalTypeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="comments" />
              <bean parent="FieldDefinition"
                    p:attributeName="protocolNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="specialReviewCode" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="ProposalSpecialReview-lookupDefinition" parent="ProposalSpecialReview-lookupDefinition-parentBean" />

  <bean id="ProposalSpecialReview-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Prop Special Review Lookup" />
    <property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />

    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="proposalNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="specialReviewNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="applicationDate" />
        <bean parent="FieldDefinition"
              p:attributeName="approvalDate" />
        <bean parent="FieldDefinition"
              p:attributeName="expirationDate" />
        <bean parent="FieldDefinition"
              p:attributeName="approvalTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="comments" />
        <bean parent="FieldDefinition"
              p:attributeName="protocolNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="specialReviewCode" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="proposalNumber"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="specialReviewNumber"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="applicationDate" />
        <bean parent="FieldDefinition"
              p:attributeName="approvalDate" />
        <bean parent="FieldDefinition"
              p:attributeName="expirationDate" />
        <bean parent="FieldDefinition"
              p:attributeName="approvalTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="comments" />
        <bean parent="FieldDefinition"
              p:attributeName="protocolNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="specialReviewCode" />
      </list>
    </property>
  </bean>
</beans>
