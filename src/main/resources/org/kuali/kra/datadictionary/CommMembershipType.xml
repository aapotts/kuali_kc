<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="CommMembershipType" parent="CommMembershipType-parentBean" />
    <bean id="CommMembershipType-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.kra.committee.bo.CommMembershipType" />
        <property name="inquiryDefinition" >
            <ref bean="CommMembershipType-inquiryDefinition" />
        </property>
        <property name="lookupDefinition" >
            <ref bean="CommMembershipType-lookupDefinition" />
        </property>
        <property name="titleAttribute" value="membershipTypeCode" />
        <property name="attributes" >
            <list>
                <ref bean="CommMembershipType-membershipTypeCode" />
                <ref bean="CommMembershipType-description" />
                <ref bean="CommMembershipType-versionNumber" />
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->
    
    <bean id="CommMembershipType-membershipTypeCode" parent="CommMembershipType-membershipTypeCode-parentBean" />
    <bean id="CommMembershipType-membershipTypeCode-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="membershipTypeCode" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Membership Type Code" />
        <property name="shortLabel" value="Membership Type Code" />
        <property name="maxLength" value="3" />
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="10" />
        </property>
        <property name="summary" value="Membership Type Code" />
        <property name="description" value="Membership Type Code" />
    </bean>

    <bean id="CommMembershipType-description" parent="CommMembershipType-description-parentBean" />
    <bean id="CommMembershipType-description-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="description" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Description" />
        <property name="shortLabel" value="Description" />
        <property name="maxLength" value="200" />
        <property name="validationPattern" >
            <bean parent="AnyCharacterValidationPattern" 
                  p:allowWhitespace="true" />
        </property>
        <property name="control" >
            <bean parent="TextareaControlDefinition"
                  p:rows="5"
                  p:cols="40" />
        </property>
        <property name="summary" value="Description" />
        <property name="description" value="Description" />
    </bean>

    <bean id="CommMembershipType-versionNumber" parent="CommMembershipType-versionNumber-parentBean" />
    <bean id="CommMembershipType-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
    </bean>

    <!-- Business Object Inquiry Definition -->
    <bean id="CommMembershipType-inquiryDefinition" parent="CommMembershipType-inquiryDefinition-parentBean" />
    <bean id="CommMembershipType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
        <property name="title" value="Membership Type Code" />
        <property name="inquirySections" >
            <list>
                <bean parent="InquirySectionDefinition">
                    <property name="title" value="Membership Type Code" />
                    <property name="numberOfColumns" value="1" />
                    <property name="inquiryFields" >
                        <list>
                            <bean parent="FieldDefinition"
                                p:attributeName="membershipTypeCode" 
                                p:forceInquiry="true" />
                            <bean parent="FieldDefinition"
                                p:attributeName="description" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->
    <bean id="CommMembershipType-lookupDefinition" parent="CommMembershipType-lookupDefinition-parentBean" />
    <bean id="CommMembershipType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
        <property name="title" value="Comm Membership Type Lookup" />
        <property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />
        <property name="instructions" value="Look up a Comm Membership Type" />
        <property name="defaultSort" >
            <bean parent="SortDefinition" >
        </bean>
        </property>
        <property name="lookupFields" >
            <list>
                <bean parent="FieldDefinition"
                    p:attributeName="membershipTypeCode" 
                    p:forceInquiry="true" />
                <bean parent="FieldDefinition"
                    p:attributeName="description" />
            </list>
        </property>
        <property name="resultFields" >
            <list>
                <bean parent="FieldDefinition"
                    p:attributeName="membershipTypeCode" 
                    p:forceInquiry="true" />
                <bean parent="FieldDefinition"
                    p:attributeName="description" />
            </list>
        </property>
    </bean>
</beans>