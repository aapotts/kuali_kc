<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="SpecialReviewReference" parent="SpecialReviewReference-parentBean" />
	<bean id="SpecialReviewReference-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.kra.bo.AbstractSpecialReview" />
		<property name="inquiryDefinition" >
			<ref bean="SpecialReviewReference-inquiryDefinition" />
		</property>
		<property name="lookupDefinition" >
			<ref bean="SpecialReviewReference-lookupDefinition" />
		</property>
		<property name="titleAttribute" value="specialReviewNumber" />
		<property name="attributes" >
			<list>
				<ref bean="SpecialReviewReference-specialReviewNumber" />
				<ref bean="SpecialReviewReference-specialReviewCode" />
				<ref bean="SpecialReviewReference-approvalTypeCode" />
				<ref bean="SpecialReviewReference-protocolNumber" />
				<ref bean="SpecialReviewReference-applicationDate" />
				<ref bean="SpecialReviewReference-approvalDate" />
				<ref bean="SpecialReviewReference-expirationDate" />
				<ref bean="SpecialReviewReference-comments" />
				<ref bean="SpecialReviewReference-versionNumber" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	

	<bean id="SpecialReviewReference-specialReviewNumber" parent="SpecialReviewReference-specialReviewNumber-parentBean" />
	<bean id="SpecialReviewReference-specialReviewNumber-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="specialReviewNumber" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Special Review Number" />
		<property name="shortLabel" value="Special Review Number" />
		<property name="maxLength" value="22" />
		<property name="validationPattern" >
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control" >
			<bean parent="TextControlDefinition"
				p:size="10" />
		</property>
		<property name="summary" value="Special Review Number" />
		<property name="description" value="Special Review Number" />
	</bean>

	<bean id="SpecialReviewReference-specialReviewCode" parent="SpecialReviewReference-specialReviewCode-parentBean" />
	<bean id="SpecialReviewReference-specialReviewCode-parentBean" abstract="true" parent="AttributeDefinition" >
	    <property name="name" value="specialReviewCode" />
	    <property name="forceUppercase" value="false" />
	    <property name="label" value="Type" />
	    <property name="shortLabel" value="Special Review Code" />
	    <property name="maxLength" value="3" />
	    <property name="validationPattern" >
	      <bean parent="AlphaNumericValidationPattern" />
	    </property>
	    <property name="required" value="true" />
	    <property name="control" >
	      <bean parent="SelectControlDefinition"
	            p:businessObjectClass="org.kuali.kra.bo.SpecialReview"
	            p:valuesFinderClass="org.kuali.kra.lookup.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
	            p:includeKeyInLabel="false"
	            p:includeBlankRow="false"
	            p:keyAttribute="specialReviewCode"
	            p:labelAttribute="description" />
	    </property>
	    <property name="summary" value="Special Review Code" />
	    <property name="description" value="The type indicates which special review, if any, is relevant to the document (proposal/award/irb)." />
	</bean>

	<bean id="SpecialReviewReference-approvalTypeCode" parent="SpecialReviewReference-approvalTypeCode-parentBean" />
	<bean id="SpecialReviewReference-approvalTypeCode-parentBean" abstract="true" parent="AttributeDefinition" >
	    <property name="name" value="approvalTypeCode" />
	    <property name="forceUppercase" value="false" />
	    <property name="label" value="Approval Status" />
	    <property name="shortLabel" value="Approval Type Code" />
	    <property name="maxLength" value="3" />
	    <property name="validationPattern" >
	      <bean parent="AlphaNumericValidationPattern" />
	    </property>
	    <property name="required" value="true" />
	    <property name="control" >
	      <bean parent="SelectControlDefinition"
	            p:valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.SpecialReviewApprovalTypeValuesFinder"
	            p:includeKeyInLabel="false" />
	    </property>
	    <property name="summary" value="Approval Type Code" />
	    <property name="description" value="The approval status indicates if the special review relevant to the document (proposal/award/irb) is pending approval, or already approved." />
	</bean>

	<bean id="SpecialReviewReference-protocolNumber" parent="SpecialReviewReference-protocolNumber-parentBean" />
	<bean id="SpecialReviewReference-protocolNumber-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="protocolNumber" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Protocol Number" />
		<property name="shortLabel" value="Protocol Number" />
		<property name="maxLength" value="20" />
		<property name="validationPattern" >
			<bean parent="AnyCharacterValidationPattern" />
		</property>
		<property name="control" >
			<bean parent="TextControlDefinition"
				p:size="10" />
		</property>
		<property name="summary" value="Protocol Number" />
		<property name="description" value="Protocol Number" />
	</bean>

	<bean id="SpecialReviewReference-applicationDate" parent="SpecialReviewReference-applicationDate-parentBean" />
	<bean id="SpecialReviewReference-applicationDate-parentBean" abstract="true" parent="KraAttributeReferenceDummy-genericDate" >
		<property name="name" value="applicationDate" />
		<property name="label" value="Application Date" />
		<property name="shortLabel" value="Application Date" />
		<property name="summary" value="Application Date" />
		<property name="description" value="Application Date" />
	</bean>

	<bean id="SpecialReviewReference-approvalDate" parent="SpecialReviewReference-approvalDate-parentBean" />
	<bean id="SpecialReviewReference-approvalDate-parentBean" abstract="true" parent="KraAttributeReferenceDummy-genericDate" >
		<property name="name" value="approvalDate" />
		<property name="label" value="Approval Date" />
		<property name="shortLabel" value="Approval Date" />
		<property name="summary" value="Approval Date" />
		<property name="description" value="Approval Date" />
	</bean>

	<bean id="SpecialReviewReference-expirationDate" parent="SpecialReviewReference-expirationDate-parentBean" />
	<bean id="SpecialReviewReference-expirationDate-parentBean" abstract="true" parent="KraAttributeReferenceDummy-genericDate" >
		<property name="name" value="expirationDate" />
		<property name="label" value="Expiration Date" />
		<property name="shortLabel" value="Expiration Date" />
		<property name="summary" value="Expiration Date" />
		<property name="description" value="Expiration Date" />
	</bean>

	<bean id="SpecialReviewReference-comments" parent="SpecialReviewReference-comments-parentBean" />
	<bean id="SpecialReviewReference-comments-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="comments" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Comments" />
		<property name="shortLabel" value="Comments" />
		<property name="maxLength" value="2000" />
		<property name="control" >
			<bean parent="TextareaControlDefinition"
            p:rows="3"
            p:cols="30" />
		</property>
		<property name="summary" value="Comments" />
		<property name="description" value="Comments" />
	</bean>

	<bean id="SpecialReviewReference-specialReviewExemptions" parent="SpecialReviewReference-specialReviewExemptions-parentBean" />
	<bean id="SpecialReviewReference-specialReviewExemptions-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="specialReviewExemptions" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="SpecialReviewExemptions" />
		<property name="shortLabel" value="SpecialReviewExemptions" />
		<property name="maxLength" value="10" />
		<property name="validationPattern" >
			<bean parent="AlphaNumericValidationPattern" />
		</property>
		<property name="control" >
			<bean parent="SelectControlDefinition"
	            p:businessObjectClass="org.kuali.kra.bo.ExemptionType"
	            p:valuesFinderClass="org.kuali.kra.lookup.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
	            p:includeKeyInLabel="false"
	            p:keyAttribute="exemptionTypeCode"
	            p:labelAttribute="description" />
		</property>
		<property name="summary" value="Special Review Exemptions" />
		<property name="description" value="Special Review Exemptions" />
	</bean>

	<bean id="SpecialReviewReference-versionNumber" parent="SpecialReviewReference-versionNumber-parentBean" />
	<bean id="SpecialReviewReference-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
	</bean>

	<!-- Business Object Inquiry Definition -->
	<bean id="SpecialReviewReference-inquiryDefinition" parent="SpecialReviewReference-inquiryDefinition-parentBean" />
	<bean id="SpecialReviewReference-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
		<property name="title" value=" Special Review Id" />
		<property name="inquirySections" >
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="title" value=" Special Review Id" />
					<property name="numberOfColumns" value="1" />
					<property name="inquiryFields" >
						<list>
							<bean parent="FieldDefinition"
								p:attributeName="specialReviewNumber" />
							<bean parent="FieldDefinition"
								p:attributeName="specialReviewCode" />
							<bean parent="FieldDefinition"
								p:attributeName="approvalTypeCode" />
							<bean parent="FieldDefinition"
								p:attributeName="protocolNumber" />
							<bean parent="FieldDefinition"
								p:attributeName="applicationDate" />
							<bean parent="FieldDefinition"
								p:attributeName="approvalDate" />
							<bean parent="FieldDefinition"
								p:attributeName="expirationDate" />
							<bean parent="FieldDefinition"
								p:attributeName="comments" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Business Object Lookup Definition -->
	<bean id="SpecialReviewReference-lookupDefinition" parent="SpecialReviewReference-lookupDefinition-parentBean" />
	<bean id="SpecialReviewReference-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
		<property name="title" value=" Special Review Lookup" />
		<property name="menubar" value="&lt;a href=&quot;index.jsp&quot;&gt;Main&lt;/a&gt;" />
		<property name="instructions" value="Look up a  Special Review" />
		<property name="defaultSort" >
			<bean parent="SortDefinition" >
		</bean>
		</property>
		<property name="lookupFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="specialReviewNumber" />
				<bean parent="FieldDefinition"
					p:attributeName="specialReviewCode" />
				<bean parent="FieldDefinition"
					p:attributeName="approvalTypeCode" />
				<bean parent="FieldDefinition"
					p:attributeName="protocolNumber" />
				<bean parent="FieldDefinition"
					p:attributeName="applicationDate" />
				<bean parent="FieldDefinition"
					p:attributeName="approvalDate" />
				<bean parent="FieldDefinition"
					p:attributeName="expirationDate" />
				<bean parent="FieldDefinition"
					p:attributeName="comments" />
			</list>
		</property>
		<property name="resultFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="specialReviewNumber" />
				<bean parent="FieldDefinition"
					p:attributeName="specialReviewCode" />
				<bean parent="FieldDefinition"
					p:attributeName="approvalTypeCode" />
				<bean parent="FieldDefinition"
					p:attributeName="protocolNumber" />
				<bean parent="FieldDefinition"
					p:attributeName="applicationDate" />
				<bean parent="FieldDefinition"
					p:attributeName="approvalDate" />
				<bean parent="FieldDefinition"
					p:attributeName="expirationDate" />
				<bean parent="FieldDefinition"
					p:attributeName="comments" />
			</list>
		</property>
	</bean>
</beans>
