<dictionaryEntry>
    <transactionalDocument>
    
        <documentClass>org.kuali.kra.proposaldevelopment.document.ProposalDevelopmentDocument</documentClass>
        <businessRulesClass>org.kuali.kra.proposaldevelopment.rules.ProposalDevelopmentDocumentRule</businessRulesClass>

        <documentAuthorizerClass>org.kuali.kra.proposaldevelopment.document.authorization.ProposalDevelopmentDocumentAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>ProposalDevelopmentDocument</documentTypeName>
        <documentTypeCode>PRDV</documentTypeCode>

        <label>Proposal Development Document</label>
        <shortLabel>Prop Dev Doc</shortLabel>

        <attributes>
			<attribute name="proposalNumber">
                <label>Proposal Number</label>
                <shortLabel>Proposal Number</shortLabel>

                <maxLength>12</maxLength>
                <validationPattern><numeric /></validationPattern>

                <required>false</required>

                <control>
					<hidden />
                </control>

                <summary>Proposal Number</summary>
                <description>Proposal Number</description>
			</attribute>
            <attribute name="title">
                <label>Project Title</label>
                <shortLabel>Title</shortLabel>

                <maxLength>500</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <required>true</required>

                <control>
                    <textarea rows="3" cols="80" />
                </control>

                <summary>The title of the propsal.</summary>
                <description>The title of the propsal.</description>
			</attribute>

			<attribute name="sponsorCode">
				<label>Agency/Sponsor #</label>
				<shortLabel>Agency/Sponsor #</shortLabel>

				<maxLength>6</maxLength>
				<validationPattern><anyCharacter /></validationPattern>

				<required>true</required>

				<control>
					<text size="12"/>
				</control>

				<summary>Agency/Sponsor #</summary>
				<description>Project Sponsor</description>
			</attribute>

            <attributeReference name="requestedStartDateInitial" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>Start Date</label>
                <shortLabel>Start Dt</shortLabel>

 				<required>true</required>

                <summary>The Start Date of the Proposal</summary>
                <description>Yep, it's when the Proposal begins...</description>
      		</attributeReference>

            <attributeReference name="requestedEndDateInitial" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>End Date</label>
                <shortLabel>Endt Dt</shortLabel>

 				<required>true</required>

                <summary>The End Date of the Proposal</summary>
                <description>Yep, it's when the Proposal ends...</description>
      		</attributeReference>

      		<attribute name="activityTypeCode">
                <label>Activity Type</label>
                <shortLabel>Activity Type</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern>
                    <alphaNumeric />
                </validationPattern>

                <required>true</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.ActivityTypeValuesFinder" />
                </control>

                <summary>Activity Type summary</summary>
                <description>Activity Type description</description>
            </attribute>

            <attribute name="ownedByUnit">
                <label>Lead Unit</label>
                <shortLabel>Lead Unit</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <required>true</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.LeadUnitValuesFinder" />
                </control>

                <summary>Lead Unit (Owned by Unit)</summary>
                <description>Lead Unit (Owned by Unit)</description>
			</attribute>

			<attribute name="proposalTypeCode">
                <label>Proposal Type</label>
                <shortLabel>Proposal Type</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <required>true</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.lookup.keyvalue.ProposalTypeValuesFinder" />
                </control>

                <summary>The Types that the Proposal Could be.</summary>
                <description>Isn't it obvious?</description>
            </attribute>

            <attribute name="currentAwardNumber">
				<label>Award #</label>
				<shortLabel>Award #</shortLabel>

				<maxLength>6</maxLength>
				<validationPattern><anyCharacter /></validationPattern>

				<required>false</required>

				<control>
					<text size="12"/>
				</control>

				<summary>Award # summary</summary>
				<description>Award # description</description>
			</attribute>

            <attributeReference name="deadlineDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate" >
                <label>Deadline Date</label>
                <shortLabel>Deadline Dt</shortLabel>

 				<required>false</required>

                <summary>The Deadline Date of the Proposal</summary>
                <description>This field represents the date the proposal is due to the institution's office that is authorized to submit proposals on behalf of the institution (e.g. sponsored programs, etc.)..</description>
      		</attributeReference>

			<attribute name="noticeOfOpportunityCode">
                <label>Notice of Opportunity</label>
                <shortLabel>Notice of Opportunity</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><numeric /></validationPattern>

                <required>false</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.NoticeOfOpportunityValuesFinder" />
                </control>

                <summary>Notice of Opportunity for this Proposal.</summary>
                <description>This field is used to indicate if the proposal was in response to a solicitation, the type of solicitation or of it is unsolicited.</description>
            </attribute>

			<attribute name="deadlineType">
                <label>Proposal Deadline Type</label>
                <shortLabel>Proposal Deadline Type</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <required>false</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.DeadlineTypeValuesFinder" />
                </control>

                <summary>The Deadline Type for this Proposal.</summary>
                <description>This field is used to indicate the type of proposal deadline.</description>
            </attribute>

      		<attribute name="cfdaNumber">
				<label>CFDA Number</label>
				<shortLabel>CFDA #</shortLabel>

				<maxLength>6</maxLength>
				<validationPattern><alphaNumeric /></validationPattern>

				<required>false</required>

				<control>
					<text size="8"/>
				</control>

				<summary>The CFDA Number for this Proposal.</summary>
				<description>This is equivalent to the "Catalogue of Federal Domestic Assistance Number". It is a unique number fo rthe sponsor and the funding opportunity announcement.</description>
			</attribute>

      		<attribute name="programAnnouncementNumber">
				<label>Opportunity Id</label>
				<shortLabel>Opp. Id</shortLabel>

				<maxLength>50</maxLength>
				<validationPattern><alphaNumeric /></validationPattern>

				<required>false</required>

				<control>
					<text size="52"/>
				</control>

				<summary>The Opportunity Id for this Proposal.</summary>
				<description>This field is used to enter the unique identifier associated with each sponsor's funding opportunity announcement. This is equivalent to "Funding Opportunity Ammouncement number" or "FOA number".</description>
			</attribute>

      		<attribute name="primeSponsorCode">
				<label>Prime Sponsor</label>
				<shortLabel>Prime Sponsor</shortLabel>

				<maxLength>6</maxLength>
				<validationPattern><anyCharacter /></validationPattern>

				<required>false</required>

				<control>
					<text size="8"/>
				</control>

				<summary>The Prime Sponsor for this Proposal.</summary>
				<description>This field represents the sponsor of a subaward that your are receiving or if there is a sub-agency.</description>
			</attribute>

      		<attribute name="sponsorProposalNumber">
				<label>Sponsor Proposal ID</label>
				<shortLabel>Sponsor Proposal ID</shortLabel>

				<maxLength>70</maxLength>
				<validationPattern><anyCharacter /></validationPattern>

				<required>false</required>

				<control>
					<text size="72"/>
				</control>

				<summary>The Sponsor ID for this Proposal.</summary>
				<description>This field is used to indicate the ID assigned by the sponsor when the proposal was submitted.</description>
			</attribute>

			<attribute name="nsfCode">
                <label>NSF Science Code</label>
                <shortLabel>NSF Science Code</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <required>false</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.lookup.keyvalue.NsfCodeValuesFinder" />
                </control>

                <summary>The NSF Science Code for this Proposal.</summary>
                <description>This field is used to indicate research activity as defined by the National Science Foundation. NSF codes are not specific for NSF proposals and/or awards.</description>
            </attribute>

            <attributeReference name="subcontracts" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Does this proposal include subaward(s)</label>
                <shortLabel>Subawards Flag</shortLabel>
                <summary>Subawards Flag</summary>
                <description>The Proposal will include a subaward with another institution.</description>
			</attributeReference>

			<attribute name="agencyDivisionCode">
				<label>Agency Division Code</label>
				<shortLabel>Agency Div Code</shortLabel>

				<maxLength>3</maxLength>
				<validationPattern><numeric /></validationPattern>

				<required>false</required>

				<control>
					<text size="5"/>
				</control>

				<summary>The Agency Division Code for this Proposal.</summary>
				<description>Currently specific to the NSF only. A 3 digit code that is unique to each NSF division.</description>
			</attribute>

			<attribute name="agencyProgramCode">
				<label>Agency Program Code</label>
				<shortLabel>Agency Program Code</shortLabel>

				<maxLength>3</maxLength>
				<validationPattern><numeric /></validationPattern>

				<required>false</required>

				<control>
					<text size="5"/>
				</control>

				<summary>The Agency Program Code for this Proposal.</summary>
				<description>Currently specific to the NSF only. A 3 digit code that is unique to each NSF program.</description>
			</attribute>

			<attribute name="programAnnouncementTitle">
				<label>Sponsor Program Announcement Name</label>
				<shortLabel>Program Title</shortLabel>

				<maxLength>150</maxLength>
				<validationPattern><alphaNumeric allowWhitespace="true" /></validationPattern>

				<required>false</required>

                <control>
                    <textarea rows="3" cols="80" />
                </control>

				<summary>The Program Title for this Proposal.</summary>
				<description>This field is used to indicate the title of the sponsor's funding opportunity announcement.</description>
			</attribute>

<!-- delivery info -->
<!--  TODO : rename to mailTypeCode mailTypeCode ? -->
            <attribute name="mailBy">
                <label>Mail By</label>
                <shortLabel>Mail By</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <required>false</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.MailByValuesFinder" />
                </control>

                <summary>Mail By</summary>
                <description>Mail By</description>
			</attribute>

            <attribute name="mailType">
                <label>Type</label>
                <shortLabel>Type</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <required>false</required>

                <control>
                    <select valuesFinderClass="org.kuali.kra.proposaldevelopment.lookup.keyvalue.MailTypeValuesFinder" />
                </control>

                <summary>Mail Type</summary>
                <description>Mail Type</description>
			</attribute>
			<attribute name="mailAccountNumber">
				<label>Mail Account ID</label>
				<shortLabel>Mail Account ID</shortLabel>
				
				<maxLength>15</maxLength>
				<validationPattern><anyCharacter /></validationPattern>
				
				<required>false</required>
				
				<control>
					<text size="16"/>
				</control>
				
				<summary>Mail Account ID</summary>
				<description>Mail Account ID</description>
			</attribute>
			<attribute name="numberOfCopies">
				<label>Number of Copies</label>
				<shortLabel>Number of Copies</shortLabel>
				
				<maxLength>2</maxLength>
				<validationPattern><anyCharacter /></validationPattern>
				
				<required>false</required>
				
				<control>
					<text size="3"/>
				</control>
				
				<summary>Number of Copies</summary>
				<description>Number of Copies</description>
			</attribute>
			<!-- TODO: This is an integer, but lookup return the name and address -->
			<attribute name="mailingAddressId">
				<label>Mailing Name And Address</label>
				<shortLabel>Name And Address</shortLabel>
				
				<maxLength>6</maxLength>
				<validationPattern><numeric /></validationPattern>
				
				<required>false</required>
				
				<control>
					<hidden />
				</control>
				
				<summary>Mailing Name And Address</summary>
				<description>Mailing Name And Address</description>
			</attribute>
            <attribute name="mailDescription">
                <label>Mail Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>200</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <required>false</required>

                <control>
                    <textarea rows="3" cols="80" />
                </control>

                <summary>Mail Description</summary>
                <description>Mail Description</description>
			</attribute>
			
<!--  organization/location -->	
			<attribute name="organizationId">
				<label>Applicant Organization</label>
				<shortLabel>Organization</shortLabel>
				
				<maxLength>8</maxLength>
				<validationPattern><anyCharacter /></validationPattern>
				
				<required>false</required>
				
				<control>
					<hidden />
				</control>
				
				<summary>Organization and contact info</summary>
				<description>Organization and contact info</description>
			</attribute>
            <attribute name="performingOrganizationId">
                <label>Performing Organization Id</label>
                <shortLabel>performingOrganizationId</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
   					<hidden />
                </control>

                <summary>performingOrganizationId</summary>
                <description>performingOrganizationId</description>
			</attribute>
		
