<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="ProtocolParticipantBean" parent="ProtocolParticipantBean-parentBean" />
	<bean id="ProtocolParticipantBean-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.kra.irb.protocol.participant.ProtocolParticipantBean" />
		<property name="objectLabel" value="Protocol Participant Bean" />
		<property name="titleAttribute" value="protocolParticipantId" />
		<property name="attributes" >
			<list>
			    <ref bean="ProtocolParticipantBean-protocolParticipantId" />
				<ref bean="ProtocolParticipantBean-participantTypeCode" />
				<ref bean="ProtocolParticipantBean-participantCount" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	
    <bean id="ProtocolParticipantBean-protocolParticipantId" parent="ProtocolParticipant-protocolParticipantId-parentBean" />
    <bean id="ProtocolParticipantBean-protocolParticipantId-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="protocolParticipantId" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Protocol Participant Id" />
        <property name="shortLabel" value="Protocol Participant Id" />
        <property name="maxLength" value="22" />
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="10" />
        </property>
        <property name="summary" value="Protocol Participant Id" />
        <property name="description" value="Protocol Participant Id" />
    </bean>

	<bean id="ProtocolParticipantBean-participantTypeCode" parent="ProtocolParticipant-participantTypeCode-parentBean" />
	<bean id="ProtocolParticipantBean-participantTypeCode-parentBean" abstract="true" parent="ParticipantType-participantTypeCode" >
		<property name="name" value="participantTypeCode" />
		<property name="label" value="Protocol Participant Description" />
        <property name="shortLabel" value="Description" />
		<property name="required" value="true" />
		<property name="control" >
            <bean parent="SelectControlDefinition"
                p:valuesFinderClass="org.kuali.kra.irb.protocol.participant.ParticipantTypeValuesFinder" 
                p:includeKeyInLabel="false" />
        </property>
	</bean>

	<bean id="ProtocolParticipantBean-participantCount" parent="ProtocolParticipant-participantCount-parentBean" />
	<bean id="ProtocolParticipantBean-participantCount-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="participantCount" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Protocol Participant Count" />
		<property name="shortLabel" value="Count" />
		<property name="maxLength" value="6" />
		<property name="validationPattern" >
        <bean parent="NumericValidationPattern" />
		</property>
		<property name="control" >
			<bean parent="TextControlDefinition"
				p:size="10" />
		</property>
		<property name="summary" value="Partrticipant Count" />
		<property name="description" value="Participant Count" />
	</bean>
</beans>
