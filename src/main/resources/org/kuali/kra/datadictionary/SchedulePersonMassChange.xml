<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="SchedulePersonMassChange" parent="SchedulePersonMassChange-parentBean" />
    <bean id="SchedulePersonMassChange-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.kra.personmasschange.bo.SchedulePersonMassChange" />
        <property name="objectLabel" value="Schedule Person Mass Change" />
        <property name="attributes" >
            <list>
                <ref bean="SchedulePersonMassChange-schedulePersonMassChangeId" />
                <ref bean="SchedulePersonMassChange-personMassChangeId" />
                <ref bean="SchedulePersonMassChange-attendees" />
                <ref bean="SchedulePersonMassChange-versionNumber" />
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->
    
    <bean id="SchedulePersonMassChange-schedulePersonMassChangeId" parent="SchedulePersonMassChange-schedulePersonMassChangeId-parentBean" />
    <bean id="SchedulePersonMassChange-schedulePersonMassChangeId-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="schedulePersonMassChangeId" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Schedule Person Mass Change Id" />
        <property name="shortLabel" value="Schedule Person Mass Change Id" />
        <property name="maxLength" value="12" />
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="TextControlDefinition"
                p:size="12" />
        </property>
        <property name="summary" value="Schedule Person Mass Change Id" />
        <property name="description" value="Schedule Person Mass Change Id" />
    </bean>
    
    <bean id="SchedulePersonMassChange-personMassChangeId" parent="SchedulePersonMassChange-personMassChangeId-parentBean" />
    <bean id="SchedulePersonMassChange-personMassChangeId-parentBean" abstract="true" parent="PersonMassChange-personMassChangeId" />
    
    <bean id="SchedulePersonMassChange-attendees" parent="SchedulePersonMassChange-attendees-parentBean" />
    <bean id="SchedulePersonMassChange-attendees-parentBean" abstract="true" parent="AttributeDefinition" >
        <property name="name" value="attendees" />
        <property name="forceUppercase" value="false" />
        <property name="label" value="Attendees" />
        <property name="shortLabel" value="Attendees" />
        <property name="maxLength" value="1" />
        <property name="control" >
            <bean parent="CheckboxControlDefinition" />
        </property>
        <property name="summary" value="Attendees" />
        <property name="description" value="Attendees" />
    </bean>
    
    <bean id="SchedulePersonMassChange-versionNumber" parent="SchedulePersonMassChange-versionNumber-parentBean" />
    <bean id="SchedulePersonMassChange-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber" />
    
</beans>