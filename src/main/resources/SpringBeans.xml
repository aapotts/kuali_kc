	<property name="scriptConfigurationFilePaths">
	<list>
		<value>org/kuali/kra/dwr-kra.xml</value>
	</list>
	</property>
	</bean>
	-->


	<bean class="org.kuali.core.util.spring.NamedOrderedListBean">
		<property name="name" value="scriptConfigurationFilePaths" />
		<property name="listItem" value="classpath:org/kuali/kra/dwr-kra.xml" />
	</bean>

