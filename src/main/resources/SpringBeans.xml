	<bean class="org.kuali.core.web.servlet.DWRConfigFileConfigurer">
		<property name="configFile" value="org/kuali/kra/dwr-kra.xml" />
	</bean>
	-->
	<bean id="proposalDevelopmentService" class="org.kuali.kra.proposaldevelopment.service.impl.ProposalDevelopmentServiceImpl">
		<property name="businessObjectDao">
			<ref bean="businessObjectDao" />
		</property>
	</bean>
		
	<bean id="sponsorService" class="org.kuali.kra.service.impl.SponsorServiceImpl">
		<property name="businessObjectDao">
			<ref bean="businessObjectDao" />
		</property>
	</bean>
	
</beans>
